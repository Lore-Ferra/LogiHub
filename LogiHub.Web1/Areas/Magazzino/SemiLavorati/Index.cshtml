@model LogiHub.Web.Areas.Magazzino.Models.SemiLavoratiIndexViewModel

@{
    ViewData["Title"] = "Gestione Semilavorati";
}
@section Styles {
    <link rel="stylesheet" href="~/css/magazzinosemilavorati.css" />
    <link rel="stylesheet" href="~/css/offcanvas.css" />
}
@* per vedere questa view andare al percorso /Magazzino/SemiLavorati
temporaneamente fatto cosi *@
<div>
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-gray-800">📦 Magazzino Semilavorati</h1>
        <a asp-action="Aggiungi" class="btn btn-primary d-none d-md-inline-block">
            <i class="fa-solid fa-plus"></i> Aggiungi
        </a>
    </div>
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <input type="hidden" name="Page" value="1" />
                <input type="hidden" name="PageSize" value="@Model.PageSize" />

                <div class="col-8 col-md-10">
                    <div class="input-group">
                        <span class="input-group-text bg-light border-0">
                            <i class="fas fa-search text-muted"></i>
                        </span>
                        <input asp-for="Filter"
                               class="form-control border-0 bg-light"
                               placeholder="Cerca…" />
                    </div>
                </div>

                <div class="col-4 col-md-2">
                    <div class="dropdown">
                        <button class="btn btn-outline-primary dropdown-toggle w-100"
                                type="button"
                                data-bs-toggle="dropdown">
                            <i class="fa-solid fa-filter"></i> Filtri
                        </button>

                        <div class="dropdown-menu dropdown-menu-end">
                            <a class="dropdown-item" href="">
                                Filtri in arrivo…
                            </a>

                        </div>
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>

<div class="d-md-none">
    @foreach (var item in Model.SemiLavorati)
    {
        <div class="card shadow-sm semilavorato-card mb-2"
             onclick="OffcanvasManager.open('offcanvasDettagli','/Magazzino/SemiLavorati/Details?id=@item.Id')">
            <div class="card-body">
                <div class="fw-bold fs-5 mb-2">
                    #@item.Id
                </div>
                <hr class="my-2" />
                <div class="d-flex justify-content-between align-items-start">
                    <div class="flex-grow-1 pe-3">
                        <div class="small text-muted mb-1">
                            <strong>Ubicazione:</strong>
                            <span class="badge bg-secondary">@item.CodiceUbicazione</span>
                        </div>
                        <div class="small text-muted mb-1">
                            <strong>Descrizione:</strong> @item.Descrizione
                        </div>
                        <div class="small text-muted">
                            <strong>Ultima mov.:</strong>
                            @item.UltimaModifica.ToString("dd/MM/yyyy")
                        </div>
                    </div>
                    <div class="d-flex gap-3 align-items-center">
                        <i class="bi bi-pen text-secondary"
                           onclick="event.stopPropagation(); modificare('@item.Id')"></i>
                        <i class="bi bi-trash3 text-secondary"
                           onclick="event.stopPropagation(); eliminare('@item.Id')"></i>
                    </div>
                </div>
            </div>
        </div>
    }
    @if (!Model.SemiLavorati.Any())
    {
        <div class="text-center py-5 text-muted">
            <i class="fas fa-box-open fa-3x mb-3"></i>
            <p>Nessun semilavorato trovato.</p>
        </div>
    }
</div>

<div class="card shadow d-none d-md-block">
    <div class="card-body p-1">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0 text-center">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4">ID Oggetto</th>
                        <th>Descrizione</th>
                        <th>Ubicazione</th>
                        <th>Ultima Modifica</th>
                        <th>Azioni</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.SemiLavorati)
                    {
                        <tr style="cursor: pointer;" onclick="OffcanvasManager.open('offcanvasDettagli','/Magazzino/SemiLavorati/Details?id=@item.Id')">
                            <td class="ps-4 fw-bold text-primary">
                                <div class="small text-muted">ID: @item.Id</div>
                            </td>
                            <td>@item.Descrizione</td>
                            <td>
                                <span class="badge bg-secondary">@item.CodiceUbicazione</span>
                            </td>
                            <td>@item.UltimaModifica.ToString("dd/MM/yyyy")</td>
                            <td>
                                <button class="btn btn-sm" onclick="event.stopPropagation(); modificare('@item.Id')" title="Modifica">
                                    @*TODO Funzione modifica*@
                                    <i class="bi bi-pen"></i>
                                </button>
                                <button class="btn btn-sm" onclick="event.stopPropagation(); eliminare('@item.Id')" title="Elimina">
                                    @*TODO Funzione elimina*@
                                    <i class="bi bi-trash3"></i>
                                </button>
                            </td>

                        </tr>
                    }

                    @if (!Model.SemiLavorati.Any())
                    {
                        <tr>
                            <td colspan="6" class="text-center py-5 text-muted">
                                <i class="fas fa-box-open fa-3x mb-3"></i>
                                <p>Nessun semilavorato trovato.</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<a asp-action="Create"
   class="fab d-md-none"
   title="Aggiungi semilavorato">
    <i class="fa-solid fa-plus"></i>
</a>

@await Html.PartialAsync(
"_Offcanvas",
    new LogiHub.Web.Features.Offcanvas.OffcanvasViewModel
    {
        Id = "offcanvasDettagli",
        Title = "Dettagli semi lavorato",
        Width = "500px"
    }
)

@section Scripts {
    <script src="~/js/features/offcanvas/offcanvas.js"></script>
}