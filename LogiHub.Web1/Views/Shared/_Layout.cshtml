@inject IHtmlLocalizer<LogiHub.Web1.SharedResource> SharedLocalizer
@inject Microsoft.Extensions.Options.IOptions<AppSettings> appSettings
@{
    Layout = "_LayoutHtml";
    var version = System.Reflection.Assembly.GetAssembly(typeof(Startup)).GetName().Version;

    var identitaCorrente = (LogiHub.Web1.Areas.IdentitaViewModel)ViewData[LogiHub.Web1.Areas.IdentitaViewModel.VIEWDATA_IDENTITACORRENTE_KEY];

    var paging = Model as LogiHub.Web1.Infrastructure.PagingViewModel;
}
@section metas{
    @RenderSection("metas", false)
}
@section styles{
    @RenderSection("styles", false)
}
<div id="pageId">
    <div class="onit-page-sticky-top" id="onit-page-sticky-top">
        <nav class="navbar navbar-expand-md bg-primary" data-bs-theme="light">
            <div class="container-fluid">
                <a class="h1 text-decoration-none" href="#">LogiHub</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">

                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="#">Magazzino</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Inventario</a>
                        </li>
                        <li class="nav-item dropdown">
                        </li>
                    </ul>

                    <ul class="navbar-nav">
                        @if (identitaCorrente != null)
                        {
                            <li class="nav-item dropdown">
                                <a href="#" class="nav-link dropdown-toggle  d-flex align-items-center" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <img class="rounded-circle profile-pic" style="width: 50px" src="@identitaCorrente.GravatarUrl" />&nbsp;@identitaCorrente.EmailUtenteCorrente
                                </a>
                                <div class="dropdown-menu dropdown-menu-dark dropdown-menu-end" role="menu">
                                    <a class="dropdown-item" href="javascript:void(0)" onclick="javascript: document.getElementById('POST_LogOut').submit()" title="@SharedLocalizer["Chiudi sessione di lavoro"]">
                                        <i class="fa-solid fa-right-from-bracket"></i>&nbsp;@SharedLocalizer["Esci"]
                                    </a>
                                    <form autocomplete="off" method="post" action="@Url.Action(MVC.Login.Logout())" id="POST_LogOut" display="none"></form>
                                </div>
                            </li>
                        }
                    </ul>

                </div>
            </div>
        </nav>
        @RenderSection("pageTitle", false)
    </div>
    @RenderSection("pageSubtitle", false)
    <div class="m-md-5 p-md-5">
        @RenderBody()
                @if (paging != null)
                {
                    <div class="d-flex justify-content-center justify-content-md-between align-items-center pt-3">

                        <div class="d-none d-md-flex align-items-center gap-2">
                            <span class="small text-muted text-nowrap">Mostra:</span>
                            <select class="form-select form-select-sm"
                            onchange="location.href = '@paging.ChangePageSizePageUrl(Url, 0)'.replace('0', this.value)">
                                @foreach (var size in paging.PageSizes)
                                {
                                    <option value="@size" selected="@(paging.PageSize == size)">
                                        @size
                                    </option>
                                }
                            </select>
                        </div>

                        <nav aria-label="Navigazione pagine">
                            <ul class="pagination justify-content-center mb-0">

                                <li class="page-item @(paging.Page <= 1 ? "disabled" : "")">
                                    <a class="page-link" href="@paging.FirstPageUrl(Url)">«</a>
                                </li>

                                <li class="page-item @(paging.Page <= 1 ? "disabled" : "")">
                                    <a class="page-link" href="@paging.PrevPageUrl(Url)">‹</a>
                                </li>

                                <li class="page-item disabled">
                                    <span class="page-link">
                                        Pagina @paging.Page di @paging.TotalPages()
                                        <small>(@paging.TotalItems elementi)</small>
                                    </span>
                                </li>

                                <li class="page-item @(paging.Page >= paging.TotalPages() ? "disabled" : "")">
                                    <a class="page-link" href="@paging.NextPageUrl(Url)">›</a>
                                </li>

                                <li class="page-item @(paging.Page >= paging.TotalPages() ? "disabled" : "")">
                                    <a class="page-link" href="@paging.LastPageUrl(Url)">»</a>
                                </li>

                            </ul>
                        </nav>

                        <div style="width: 100px;" class="d-none d-md-block"></div>
                    </div>
                }
    </div>
    
</div>
