@using LogiHub.Services.Shared
@model LogiHub.Web.Areas.Inventari.Sessioni.Discrepanze.DiscrepanzeViewModel

@* --- SEARCH CARD --- *@
<div class="card shadow-sm mb-4 border-0">
    <div class="card-body p-2 p-md-3">
        <form method="get">
            <div class="row g-2 align-items-end">
                <div class="col">
                    <label class="form-label small fw-semibold text-muted">Ricerca</label>
                    <div class="d-flex gap-2">
                        <div class="input-group flex-grow-1">
                            <span class="input-group-text bg-transparent text-muted"><i class="fas fa-search"></i></span>
                            <input name="SearchQuery" type="search" value="@Model.SearchQuery" class="form-control" placeholder="Cerca barcode o descrizione...">
                        </div>
                        <button type="submit" class="btn btn-primary flex-shrink-0">
                            <i class="fas fa-search me-1"></i> Cerca
                        </button>
                    </div>
                </div>
                @if (Model.SearchCard?.ShowUscitoFilter == true) {
                    <div class="col-auto">
                        <label class="form-label small fw-semibold text-muted">Stato</label>
                        <select class="form-select" name="Filter" onchange="this.form.submit()" style="min-width: 120px;">
                            <option value="">Tutti</option>
                        </select>
                    </div>
                }
            </div>
        </form>
    </div>
</div>

@* --- SEZIONI --- *@
@{
    await RenderSezione(Model.DaAggiungere, "Extra (Da Aggiungere)", "text-success", "fa-plus-circle");
    await RenderSezione(Model.DaRimuovere, "Mancanti (Da Rimuovere)", "text-danger", "fa-minus-circle");
    await RenderSezione(Model.DaSpostare, "Da Spostare", "text-warning", "fa-exchange-alt");
}

@functions {
    public async Task RenderSezione(List<DiscrepanzaDTO> items, string titolo, string colorClass, string icon) {
        if (items == null || !items.Any()) return;

        <div class="mb-5">
            <h5 class="fw-bold @colorClass mb-3 px-1">
                <i class="fas @icon me-2"></i>@titolo
                <span class="badge rounded-pill bg-light text-dark border ms-2">@items.Count</span>
            </h5>

            @* DESKTOP: TABELLA *@
            <div class="d-none d-md-block shadow-sm rounded border bg-white overflow-hidden">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Articolo</th>
                            <th>Ubicazione Prevista</th>
                            <th>Ubicazione Rilevata</th>
                            <th>Stato</th>
                            <th class="text-end">Azioni</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in items) {
                            <tr>
                                <td>
                                    <div class="fw-bold">@item.Barcode</div>
                                    <div class="small text-muted">@item.Descrizione</div>
                                </td>
                                <td><span class="text-muted">@(item.UbicazioneSnapshot ?? "-")</span></td>
                                <td><span class="fw-bold">@(item.UbicazioneRilevata ?? "-")</span></td>
                                <td>
                                    <span class="badge @(item.Stato == StatoDiscrepanza.Aperta ? "bg-warning" : "bg-success")">
                                        @item.Stato
                                    </span>
                                </td>
                                <td class="text-end">
                                    <button class="btn btn-sm btn-outline-primary">Gestisci</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @* MOBILE: CARDS *@
            <div class="d-md-none d-flex flex-column gap-2">
                @foreach (var item in items) {
                    <div class="card border-0 shadow-sm border-start border-4 @(colorClass.Replace("text-", "border-"))">
                        <div class="card-body p-3">
                            <div class="d-flex justify-content-between mb-2">
                                <span class="fw-bold text-primary">@item.Barcode</span>
                                <span class="badge @(item.Stato == StatoDiscrepanza.Aperta ? "bg-warning" : "bg-success") text-uppercase" style="font-size: 0.65rem;">
                                    @item.Stato
                                </span>
                            </div>
                            <div class="small text-muted mb-3">@item.Descrizione</div>
                            
                            <div class="row g-0 border-top pt-2">
                                <div class="col-6 border-end">
                                    <div class="small text-muted" style="font-size: 0.7rem;">PREVISTA</div>
                                    <div class="fw-semibold">@(item.UbicazioneSnapshot ?? "-")</div>
                                </div>
                                <div class="col-6 ps-3">
                                    <div class="small text-muted" style="font-size: 0.7rem;">RILEVATA</div>
                                    <div class="fw-semibold">@(item.UbicazioneRilevata ?? "-")</div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
}