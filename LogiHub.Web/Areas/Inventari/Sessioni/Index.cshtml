@model LogiHub.Web.Areas.Inventari.Sessioni.SessioniIndexViewModel
@{
    bool isBloccato = await BloccoService.IsBloccatoAsync();
}
@{
    ViewData["Title"] = "Gestione Inventario";
}

@section Styles {
    <link rel="stylesheet" href="~/css/fab-button.css"/>
}

<div>
    @await Html.PartialAsync("~/Features/SearchCard/_SearchCardSimple.cshtml", Model.SearchCard)
</div>

@* --- VERSIONE MOBILE (CARDS) --- *@
<div class="d-md-none mt-3">
    @foreach (var item in Model.Sessioni)
    {
        <div class="card shadow-sm mb-2"
             style="cursor:pointer"
             onclick="window.location.href='@Url.Action("Index", "Dettaglio", new { id = item.Id })'">
            <div class="card-body p-3">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <small class="text-muted">@item.DataCreazione.ToString("dd/MM/yyyy HH:mm")</small>
                        <div class="@(item.Chiuso ? "" : "fw-bold text-primary")">@item.NomeSessione</div>
                    </div>
                    <div>
                        @if (item.Chiuso) {
                            <span class="badge border text-secondary bg-body-secondary">Chiuso</span>
                        } else {
                            <span class="badge text-bg-warning"><i class="fa-solid fa-circle fa-fade me-1"></i>In Corso</span>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@* --- VERSIONE DESKTOP (TABELLA) --- *@
<div class="card shadow-sm mt-3 d-none d-md-block">
    <div class="card-body p-1">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead>
                <tr class="text-secondary small text-uppercase">
                    <th class="ps-3">Data</th>
                    <th>Nome Sessione</th>
                    <th class="text-center">Stato</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var item in Model.Sessioni)
                {
                    <tr class="@(item.Chiuso ? "bg-light text-muted" : "fw-bold")"
                        style="cursor:pointer"
                        onclick="window.location.href='@Url.Action("Index", "Dettaglio", new { id = item.Id })'">
                        <td class="ps-3">
                            @item.DataCreazione.ToString("dd/MM/yyyy")
                            <small class="d-block opacity-75">@item.DataCreazione.ToString("HH:mm")</small>
                        </td>
                        <td class="@(item.Chiuso ? "" : "text-primary")">@item.NomeSessione</td>
                        <td class="text-center">
                            @if (item.Chiuso) {
                                <span class="badge bg-secondary border-0 opacity-75">Completato</span>
                            } else {
                                <span class="badge bg-warning text-dark shadow-sm">
                                    <i class="fa-solid fa-circle fa-fade me-2" style="font-size: 0.6rem;"></i>In Corso
                                </span>
                            }
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>

@if (!isBloccato)
{
    <button type="button"
            class="fab d-md-none border-0"
            data-post-action="true"
            data-title="Aggiungi Semilavorato"
            data-url="@Url.Action("AggiungiSessioneInventario", "Sessioni", new { area = "Inventari" })"
            data-confirm="Vuoi avviare una nuova sessione? Il magazzino verrà bloccato.">
        <i class="fa-solid fa-plus"></i>
    </button>
}
else
{
    <button class="fab d-md-none btn btn-primary disabled" title="Aggiunta bloccata"
            style="cursor: not-allowed; pointer-events: auto !important;">
        <i class="fa-solid fa-lock"></i>
    </button>
}

@section Scripts {
    <script>
        document.addEventListener('click', function (e) {

            const btn = e.target.closest('[data-post-action]');
            if (!btn) return;

            e.preventDefault();

            const url = btn.getAttribute('data-url');
            const confirmMsg = btn.getAttribute('data-confirm');

            if (confirmMsg && !confirm(confirmMsg)) return;

            const form = document.createElement('form');
            form.method = 'POST';
            form.action = url;

            const token = document.querySelector('input[name="__RequestVerificationToken"]');
            if (token) {
                const hiddenInput = document.createElement('input');
                hiddenInput.type = 'hidden';
                hiddenInput.name = '__RequestVerificationToken';
                hiddenInput.value = token.value;
                form.appendChild(hiddenInput);
            }

            // 6. Spediamo il form
            document.body.appendChild(form);
            form.submit();
        });
    </script>
}

@Html.AntiForgeryToken()