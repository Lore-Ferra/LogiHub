@model LogiHub.Web.Areas.Inventari.Sessioni.SessioniIndexViewModel
@using LogiHub.Web.Features.Modals
@{
    bool isBloccato = await BloccoService.IsBloccatoAsync();
    ViewData["Title"] = "Gestione Inventario";

    var sessioniAperte = Model.Sessioni.Where(s => !s.Chiuso).ToList();
    var sessioniChiuse = Model.Sessioni.Where(s => s.Chiuso).ToList();

    var count = Model.TotalItems;
    var verbo = count == 1 ? "Trovata" : "Trovate";
    var nome = count == 1 ? "sessione" : "sessioni";
}

@section Styles {
    <link rel="stylesheet" href="~/css/fab-button.css"/>
}

<div>
    @await Html.PartialAsync("~/Features/SearchCard/_SearchCard.cshtml", Model.SearchCard)
</div>

<div class="ps-1">
    <small class="text-muted">
        @verbo <strong>@count</strong> @nome
    </small>
</div>

@* --- VERSIONE MOBILE (CARDS DIVISE) --- *@
<div class="d-md-none">
    
    @* SEZIONE IN CORSO *@
    @if (sessioniAperte.Any())
    {
        foreach (var item in sessioniAperte)
        {
            <div class="card shadow-sm border-0 border-start border-5 mt-2 border-warning"
                 style="cursor:pointer"
                 onclick="window.location.href='@Url.Action("Index", "Dettaglio", new { id = item.Id })'">
                <div class="card-body p-2">
                    
                    @* Intestazione: Titolo e Badge *@
                    <div class="d-flex justify-content-between align-items-start mb-2">
                        <div class="fw-bold text-primary text-truncate pe-2">
                            @item.NomeSessione
                        </div>
                        <span class="badge text-bg-warning text-nowrap">
                            <i class="fa-solid fa-circle fa-fade me-1"></i>In Corso
                        </span>
                    </div>

                    @* Date: Apertura e Placeholder Chiusura *@
                    <div class="small text-muted border-top pt-2">
                        <div class="d-flex align-items-center mb-1">
                            <i class="fa-solid fa-calendar-plus me-2 text-secondary"></i>
                            <span>Apertura: <strong>@item.DataCreazione.ToString("dd/MM/yyyy HH:mm")</strong></span>
                        </div>
                        <div class="d-flex align-items-center text-secondary opacity-50">
                            <i class="fa-solid fa-hourglass-half me-2"></i>
                            <span>Chiusura: <em>In attesa...</em></span>
                        </div>
                    </div>

                </div>
            </div>
        }
    }

    @* SEZIONE CHIUSE *@
    @if (sessioniChiuse.Any())
    {
        foreach (var item in sessioniChiuse)
        {
            <div class="card shadow-sm border-0 border-start border-5 mt-2 border-secondary border-opacity-75"
                 style="cursor:pointer"
                 onclick="window.location.href='@Url.Action("Index", "Dettaglio", new { id = item.Id })'">
                <div class="card-body p-2">
                    
                    @* Intestazione: Titolo e Badge *@
                    <div class="d-flex justify-content-between align-items-start mb-2">
                        <div class="text-dark text-truncate pe-2">
                            @item.NomeSessione
                        </div>
                        <span class="badge bg-secondary opacity-75 border text-nowrap">
                            Completato
                        </span>
                    </div>

                    @* Date: Apertura e Chiusura *@
                    <div class="small text-muted border-top pt-2 text-center">
                        <div class="d-flex align-items-center mb-1">
                            <i class="text-secondary fa-solid fa-calendar-plus me-2"></i>
                            <span>Apertura: @item.DataCreazione.ToString("dd/MM/yyyy HH:mm")</span>
                        </div>
                        <div class="d-flex align-items-center">
                            <i class="text-secondary fa-solid fa-calendar-check me-2"></i>
                            <span>Chiusura: @(item.DataCompletamento?.ToString("dd/MM/yyyy HH:mm") ?? "---")</span>
                        </div>
                    </div>

                </div>
            </div>
        }
    }

    @* EMPTY STATE *@
    @if (!Model.Sessioni.Any())
    {
        <div class="text-center py-5 text-muted">
            <i class="fas fa-box-open fa-3x mb-3"></i>
            <p>Nessuna sessione trovata.</p>
        </div>
    }
</div>

@* --- VERSIONE DESKTOP (TABELLA UNIFICATA CON SEPARATORI) --- *@
<div class="card border-0 shadow-sm d-none mt-1 d-md-block">
    <div class="card-body p-3">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead>
                <tr>
                    <th class="">Sessione</th>
                    <th>Data Creazione</th>
                    <th>Data Completamento</th>
                    <th class="text-center">Stato</th>
                </tr>
                </thead>
                <tbody>

                @* GRUPPO IN CORSO *@
                @if (sessioniAperte.Any())
                {
                    foreach (var item in sessioniAperte)
                    {
                        <tr class=""
                            style="cursor:pointer"
                            onclick="window.location.href='@Url.Action("Index", "Dettaglio", new { id = item.Id })'">

                            <td>
                                <div class="fw-bold text-primary mb-1">
                                    @item.NomeSessione
                                </div>
                            </td>

                            <td class="">

                                @item.DataCreazione.ToString("dd/MM/yyyy HH:mm")

                            </td>

                            <td>
                                <span>---</span>
                            </td>

                            <td class="text-center">
                                <span class="badge bg-warning text-dark shadow-sm">
                                    <i class="fa-solid fa-circle fa-fade me-2"></i>
                                    In Corso
                                </span>
                            </td>
                        </tr>
                    }
                }

                @* GRUPPO CHIUSE *@
                @if (sessioniChiuse.Any())
                {
                    foreach (var item in sessioniChiuse)
                    {
                        <tr class="bg-light text-muted"
                            style="cursor:pointer"
                            onclick="window.location.href='@Url.Action("Index", "Dettaglio", new { id = item.Id })'">

                            <td>
                                <div class="mb-1">
                                    @item.NomeSessione
                                </div>
                            </td>

                            <td class="text-muted">

                                @item.DataCreazione.ToString("dd/MM/yyyy HH:mm")

                            </td>

                            <td class="text-muted">
                                @if (item.DataCompletamento.HasValue)
                                {
                                    @item.DataCompletamento.Value.ToString("dd/MM/yyyy HH:mm")
                                }
                                else
                                {
                                    <span class="text-muted">---</span>
                                }
                            </td>

                            <td class="text-center">
                                <span class="badge bg-secondary opacity-75 border-0 ">Completato</span>
                            </td>
                        </tr>
                    }
                }

                @if (!Model.Sessioni.Any())
                {
                    <tr>
                        <td colspan="4" class="text-center py-5 text-muted">
                            <i class="fas fa-box-open fa-3x mb-3"></i>
                            <p>Nessuna sessione trovata.</p>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>

@if (!isBloccato)
{
    <button type="button"
            class="fab d-md-none border-0 d-flex align-items-center justify-content-center"
            onclick="creaNuovaSessione(event)"
            data-url="@Url.Action("AggiungiSessioneInventario", "Sessioni", new { area = "Inventari" })"
            data-message="Vuoi avviare una nuova sessione di inventario? Il magazzino verrà bloccato.">
        <i class="fa-solid fa-clipboard-check text-white"></i>
    </button>
}
else
{
    <button class="fab d-md-none btn btn-secondary disabled" title="Aggiunta bloccata"
            style="cursor: not-allowed; pointer-events: auto !important;">
        <i class="fa-solid fa-lock"></i>
    </button>
}

@* --- MODALE DI CONFERMA --- *@
@await Html.PartialAsync("~/Features/Modals/_ConfirmModal.cshtml", new ConfirmModalViewModel
{
    ModalId = "actionConfirmModal",
    Title = "Conferma Operazione",
    ConfirmButtonText = "Conferma",
    ConfirmButtonClass = "btn-primary",
    IconClass = "fa-solid fa-circle-question text-primary"
})

@section Scripts {
    <script src="~/js/Features/Modals/ConfirmModal.js"></script>
    <script>
        window.addEventListener('pageshow', function (event) {
            if (event.persisted || sessionStorage.getItem('refreshSessioni') === 'true') {
                sessionStorage.removeItem('refreshSessioni');
                window.location.reload();
            }
        });

        function creaNuovaSessione(e) {
            e.preventDefault();
            const btn = e.currentTarget;
            const url = btn.getAttribute('data-url');
            const msg = btn.getAttribute('data-message');

            const modalEl = document.getElementById('actionConfirmModal');
            const modal = bootstrap.Modal.getOrCreateInstance(modalEl);

            modalEl.querySelector('.modal-title').innerText = "Conferma Operazione";
            const msgEl = modalEl.querySelector('[data-confirm-message]');
            if(msgEl) msgEl.innerText = msg;

            const confirmBtn = modalEl.querySelector('[data-confirm-btn]');
            const newBtn = confirmBtn.cloneNode(true);
            confirmBtn.parentNode.replaceChild(newBtn, confirmBtn);

            newBtn.onclick = async () => {
                newBtn.disabled = true;
                newBtn.innerHTML = '<i class="fa-solid fa-spinner fa-spin me-2"></i>Attendere...';

                try {
                    const tokenInput = document.querySelector('input[name="__RequestVerificationToken"]');
                    const formData = new FormData();
                    if (tokenInput) formData.append('__RequestVerificationToken', tokenInput.value);

                    const res = await fetch(url, { method: 'POST', body: formData });
                    const data = await res.json();

                    if (res.ok && data.success) {
                        location.reload(); // Ricarica la pagina senza creare history duplicata
                    } else {
                        alert("Errore: " + (data.message || "Impossibile creare la sessione."));
                        location.reload();
                    }
                } catch (err) {
                    console.error(err);
                    alert("Errore di connessione");
                }
            };
            modal.show();
        }
    </script>
}

@Html.AntiForgeryToken()