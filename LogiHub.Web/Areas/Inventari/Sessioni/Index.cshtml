@model LogiHub.Web.Areas.Inventari.Sessioni.SessioniIndexViewModel
@using LogiHub.Web.Features.Modals
@{
    bool isBloccato = await BloccoService.IsBloccatoAsync();
}
@{
    ViewData["Title"] = "Gestione Inventario";
}

@section Styles {
    <link rel="stylesheet" href="~/css/fab-button.css"/>
}

<div>
    @await Html.PartialAsync("~/Features/SearchCard/_SearchCardSimple.cshtml", Model.SearchCard)
</div>

@* --- VERSIONE MOBILE (CARDS) --- *@
<div class="d-md-none mt-3">
    @foreach (var item in Model.Sessioni)
    {
        <div class="card shadow-sm mb-2"
             style="cursor:pointer"
             onclick="window.location.href='@Url.Action("Index", "Dettaglio", new { id = item.Id })'">
            <div class="card-body p-3">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="fw-bold">
                        <div class="@(item.Chiuso ? "" : "text-primary") mb-1">@item.NomeSessione</div>
                        <small class="text-muted opacity-75"><i class="fa-solid fa-calendar me-1"></i> @item.DataCreazione.ToString("dd/MM/yyyy HH:mm")</small>
                    </div>
                    <div>
                        @if (item.Chiuso) {
                            <span class="badge border text-secondary bg-body-secondary">Chiuso</span>
                        } else {
                            <span class="badge text-bg-warning"><i class="fa-solid fa-circle fa-fade me-1"></i>In Corso</span>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@* --- VERSIONE DESKTOP (TABELLA) --- *@
<div class="card shadow-sm mt-3 d-none d-md-block">
    <div class="card-body p-1">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead>
                <tr class="text-secondary small text-uppercase">
                    <th class="ps-3">Sessione</th>
                    <th class="text-center">Stato</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var item in Model.Sessioni)
                {
                    <tr class="@(item.Chiuso ? "bg-light text-muted" : "fw-bold")"
                        style="cursor:pointer"
                        onclick="window.location.href='@Url.Action("Index", "Dettaglio", new { id = item.Id })'">
                        <td class="ps-3">
                            <div class="@(item.Chiuso ? "" : "text-primary") mb-1">@item.NomeSessione</div>
                            <small class="text-muted opacity-75"><i class="fa-solid fa-calendar me-1"></i> @item.DataCreazione.ToString("dd/MM/yyyy HH:mm")</small>
                        </td>
                        <td class="text-center">
                            @if (item.Chiuso) {
                                <span class="badge bg-secondary border-0 opacity-75">Completato</span>
                            } else {
                                <span class="badge bg-warning text-dark shadow-sm">
                                    <i class="fa-solid fa-circle fa-fade me-2" style="font-size: 0.6rem;"></i>In Corso
                                </span>
                            }
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>

@if (!isBloccato)
{
    <button type="button"
            class="fab d-md-none border-0"
            data-confirm-trigger
            data-url="@Url.Action("AggiungiSessioneInventario", "Sessioni", new { area = "Inventari" })"
            data-type="form"
            data-message="Vuoi avviare una nuova sessione? Il magazzino verrà bloccato.">
        <i class="fa-solid fa-plus"></i>
    </button>
}
else
{
    <button class="fab d-md-none btn btn-primary disabled" title="Aggiunta bloccata"
            style="cursor: not-allowed; pointer-events: auto !important;">
        <i class="fa-solid fa-lock"></i>
    </button>
}

@* --- MODALE DI CONFERMA --- *@
@await Html.PartialAsync("~/Features/Modals/_ConfirmModal.cshtml", new ConfirmModalViewModel {
    ModalId = "actionConfirmModal",
    Title = "Conferma Operazione",
    ConfirmButtonText = "Conferma",
    ConfirmButtonClass = "btn-primary",
    IconClass = "fa-solid fa-circle-question text-primary"
})

@section Scripts {
    @* Assicurati che il percorso sia corretto in base a dove viene compilato il TS *@
    <script src="~/js/Features/Modals/ConfirmModal.js"></script>
}

@Html.AntiForgeryToken()