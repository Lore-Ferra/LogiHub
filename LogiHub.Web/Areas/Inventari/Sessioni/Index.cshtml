@model LogiHub.Web.Areas.Inventari.Sessioni.SessioniIndexViewModel
@using LogiHub.Web.Features.Modals
@inject LogiHub.Services.Shared.IBloccoMagazzinoService BloccoMagazzinoService
@{
    bool isBloccato = await BloccoMagazzinoService.IsBloccatoAsync();
    ViewData["Title"] = "Gestione Inventario";

    var sessioniAperte = Model.Sessioni.Where(s => !s.Chiuso).ToList();
    var sessioniChiuse = Model.Sessioni.Where(s => s.Chiuso).ToList();

    var count = Model.TotalItems;
    var verbo = count == 1 ? "Trovata" : "Trovate";
    var nome = count == 1 ? "sessione" : "sessioni";
}

@section Styles {
    <link rel="stylesheet" href="~/css/fab-button.css"/>
}

<div>
    @await Html.PartialAsync("~/Features/SearchCard/_SearchCard.cshtml", Model.SearchCard)
</div>

<div class="ps-1">
    <small class="text-muted">
        @verbo <strong>@count</strong> @nome
    </small>
</div>

@* --- VERSIONE MOBILE (CARDS) --- *@
<div class="d-md-none">
    
    @* SEZIONE IN CORSO *@
    @if (sessioniAperte.Any())
    {
        foreach (var item in sessioniAperte)
            
        {
            <div class="d-flex align-items-center">
                <hr class="flex-grow-1 m-0 opacity-25">
                <span class="mx-3 small text-muted fw-bold text-uppercase ls-05">SESSIONI APERTE</span>
                <hr class="flex-grow-1 m-0 opacity-25">
            </div>  
            <div class="card shadow-sm border-0 border-start border-5 mt-2 border-warning"
                 style="cursor:pointer"
                 onclick="window.location.href='@Url.Action("Index", "Dettaglio", new { id = item.Id })'">
                <div class="card-body p-2">
                    <div class="d-flex justify-content-between align-items-start mb-2">
                        <div class="fw-bold text-primary text-truncate pe-2">
                            @item.NomeSessione
                        </div>
                        <span class="badge text-bg-warning text-nowrap">
                            <i class="fa-solid fa-circle fa-fade me-1"></i>In Corso
                        </span>
                    </div>

                    <div class="small border-top pt-2">
                        <div class="d-flex align-items-center mb-1">
                            <i class="fa-solid fa-calendar-plus me-2 text-muted"></i>
                            <span>Creazione: @item.DataCreazione.ToString("dd/MM/yyyy HH:mm")</span>
                        </div>
                        <div class="d-flex align-items-center text-muted">
                            <i class="fa-solid fa-hourglass-half me-2"></i>
                            <span>Completamento: ---</span>
                        </div>
                    </div>
                </div>
            </div>
        }
    }

    @* SEPARATORE MOBILE *@
    @if (sessioniAperte.Any() && sessioniChiuse.Any())
    {
        <div class="d-flex align-items-center mt-3">
            <hr class="flex-grow-1 m-0 opacity-25">
            <span class="mx-3 small text-muted fw-bold text-uppercase ls-05">Sessioni Chiuse</span>
            <hr class="flex-grow-1 m-0 opacity-25">
        </div>
    }

    @* SEZIONE CHIUSE *@
    @if (sessioniChiuse.Any())
    {
        foreach (var item in sessioniChiuse)
        {
            <div class="card shadow-sm border-0 border-start border-5 mt-2 border-secondary border-opacity-50"
                 style="cursor:pointer"
                 onclick="window.location.href='@Url.Action("Index", "Dettaglio", new { id = item.Id })'">
                <div class="card-body p-2">
                    <div class="d-flex justify-content-between align-items-start mb-2">
                        <div class="text-dark text-truncate pe-2">
                            @item.NomeSessione
                        </div>
                        <span class="badge bg-secondary opacity-75 border text-nowrap">
                            Completato
                        </span>
                    </div>

                    <div class="small text-muted border-top pt-2">
                        <div class="d-flex align-items-center mb-1">
                            <i class="fa-solid fa-calendar-plus me-2 opacity-50"></i>
                            <span>Creazione: @item.DataCreazione.ToString("dd/MM/yyyy HH:mm")</span>
                        </div>
                        <div class="d-flex align-items-center">
                            <i class="fa-solid fa-calendar-check me-2 opacity-50"></i>
                            <span>Completamento: @(item.DataCompletamento?.ToString("dd/MM/yyyy HH:mm") ?? "---")</span>
                        </div>
                    </div>
                </div>
            </div>
        }
    }

    @if (!Model.Sessioni.Any())
    {
        <div class="text-center py-5 text-muted">
            <i class="fas fa-box-open fa-3x mb-3"></i>
            @if (!string.IsNullOrWhiteSpace(Model.SearchCard?.Query))
            {
                <p>Nessun risultato per "<strong>@Model.SearchCard.Query</strong>"</p>
                <p class="small text-muted mt-2">
                    Prova a modificare i <strong>filtri</strong> oppure <a href="@Url.Action("Index")" class="fw-bold text-decoration-none" onclick="window.location.replace(this.href); return false;">azzera la ricerca</a>.
                </p>
            }
            else
            {
                <p>Nessuna sessione trovata.</p>
            }
        </div>
    }
</div>

@* --- VERSIONE DESKTOP (TABELLA) --- *@
<div class="card border-0 shadow-sm d-none mt-1 d-md-block">
    <div class="card-body p-3">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead>
                <tr>
                    <th>Sessione</th>
                    <th>Data Creazione</th>
                    <th>Data Completamento</th>
                    <th class="text-center">Stato</th>
                </tr>
                </thead>
                <tbody>

                @* SEPARATORE APERTE *@
                @if (sessioniAperte.Any())
                {
                    <tr style="pointer-events: none; border-bottom: 2px solid #dee2e6;">
                        <td colspan="4" class="py-2 ps-3 bg-light">
                            <span class="small ls-05 text-muted fw-bold text-uppercase">Sessioni Aperte</span>
                        </td>
                    </tr>
                }

                @* GRUPPO IN CORSO *@
                @foreach (var item in sessioniAperte)
                {
                    <tr style="cursor:pointer" onclick="window.location.href='@Url.Action("Index", "Dettaglio", new { id = item.Id })'">
                        <td><div class="fw-bold text-primary">@item.NomeSessione</div></td>
                        <td>@item.DataCreazione.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>---</td>
                        <td class="text-center">
                            <span class="badge bg-warning text-dark shadow-sm">
                                <i class="fa-solid fa-circle fa-fade me-2"></i>In Corso
                            </span>
                        </td>
                    </tr>
                }

                @* SEPARATORE CHIUSE *@
                @if (sessioniAperte.Any() && sessioniChiuse.Any())
                {
                    <tr style="pointer-events: none; border-bottom: 2px solid #dee2e6;">
                        <td colspan="4" class="py-2 ps-3 bg-light">
                            <span class="small ls-05 text-muted fw-bold text-uppercase">Sessioni Chiuse</span>
                        </td>
                    </tr>
                }

                @* GRUPPO CHIUSE *@
                @foreach (var item in sessioniChiuse)
                {
                    <tr class="text-muted" style="cursor:pointer" onclick="window.location.href='@Url.Action("Index", "Dettaglio", new { id = item.Id })'">
                        <td>@item.NomeSessione</td>
                        <td>@item.DataCreazione.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>@(item.DataCompletamento?.ToString("dd/MM/yyyy HH:mm") ?? "---")</td>
                        <td class="text-center">
                            <span class="badge bg-secondary opacity-75 border text-nowrap">Completato</span>
                        </td>
                    </tr>
                }

                @if (!Model.Sessioni.Any())
                {
                    <tr>
                        <td colspan="4" class="text-center py-5 text-muted">
                            <i class="fas fa-box-open fa-3x mb-3"></i>
                            @if (!string.IsNullOrWhiteSpace(Model.SearchCard?.Query))
                            {
                                <p>Nessun risultato per "<strong>@Model.SearchCard.Query</strong>"</p>
                                <p class="small text-muted mt-2">
                                    Prova a modificare i <strong>filtri</strong> oppure <a href="@Url.Action("Index")" class="fw-bold text-decoration-none" onclick="window.location.replace(this.href); return false;">azzera la ricerca</a>.
                                </p>
                            }
                            else
                            {
                                <p>Nessuna sessione trovata.</p>
                            }
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>

@* --- AZIONI (FAB) --- *@
@if (!isBloccato)
{
    <button type="button"
            class="fab d-md-none border-0 d-flex align-items-center justify-content-center"
            onclick="creaNuovaSessione(event)"
            data-url="@Url.Action("AggiungiSessioneInventario", "Sessioni", new { area = "Inventari" })"
            data-message="Vuoi avviare una nuova sessione di inventario? Il magazzino verrà bloccato.">
        <i class="fa-solid fa-clipboard-check text-white"></i>
    </button>
}
else
{
    <button class="fab d-md-none btn btn-secondary disabled" title="Aggiunta bloccata"
            style="cursor: not-allowed; pointer-events: auto !important;">
        <i class="fa-solid fa-lock"></i>
    </button>
}

@* --- MODALE DI CONFERMA --- *@
@await Html.PartialAsync("~/Features/Modals/_ConfirmModal.cshtml", new ConfirmModalViewModel
{
    ModalId = "actionConfirmModal",
    Title = "Conferma Operazione",
    ConfirmButtonText = "Conferma",
    ConfirmButtonClass = "btn-primary",
    IconClass = "fa-solid fa-circle-question text-primary"
})

@section Scripts {
    <script src="~/js/Features/Modals/ConfirmModal.js"></script>
    <script>
        function mostraPendingToast() {
            const pending = sessionStorage.getItem("pendingToast");
            if (!pending) return;
            try {
                const { msg, type } = JSON.parse(pending);
                if (typeof notify === "function") notify(msg, type || "success");
            } catch (e) { console.error(e); } finally { sessionStorage.removeItem("pendingToast"); }
        }

        window.addEventListener('pageshow', function (event) {
            if (event.persisted || sessionStorage.getItem('refreshSessioni') === 'true') {
                sessionStorage.removeItem('refreshSessioni');
                window.location.reload();
            } else {
                mostraPendingToast();
            }
        });

        function creaNuovaSessione(e) {
            e.preventDefault();
            const btn = e.currentTarget;
            const url = btn.getAttribute('data-url');
            const msg = btn.getAttribute('data-message');

            const modalEl = document.getElementById('actionConfirmModal');
            const modal = bootstrap.Modal.getOrCreateInstance(modalEl);
            modalEl.querySelector('.modal-title').innerText = "Conferma Operazione";
            const msgEl = modalEl.querySelector('[data-confirm-message]');
            if(msgEl) msgEl.innerText = msg;

            const confirmBtn = modalEl.querySelector('[data-confirm-btn]');
            const newBtn = confirmBtn.cloneNode(true);
            confirmBtn.parentNode.replaceChild(newBtn, confirmBtn);

            newBtn.onclick = async () => {
                newBtn.disabled = true;
                newBtn.innerHTML = '<i class="fa-solid fa-spinner fa-spin me-2"></i>Attendere...';
                try {
                    const tokenInput = document.querySelector('input[name="__RequestVerificationToken"]');
                    const formData = new FormData();
                    if (tokenInput) formData.append('__RequestVerificationToken', tokenInput.value);

                    const res = await fetch(url, { method: 'POST', body: formData });
                    const data = await res.json();

                    if (res.ok && data.success) {
                        sessionStorage.setItem("pendingToast", JSON.stringify({ msg: data.message || "Sessione avviata!", type: "success" }));
                        location.reload();
                    } else {
                        alert(data.message || "Errore");
                        location.reload();
                    }
                } catch (err) { console.error(err); }
            };
            modal.show();
        }
    </script>
    <script>
    document.addEventListener("DOMContentLoaded", () => {
        const input = document.getElementById("searchQuery");
        const checks = Array.from(document.querySelectorAll('input.search-col-check[name="Filters.SearchInColumns"]'));
        if (!input || checks.length === 0) return;
    
        const defaultKey = "NomeSessione";
    
        const qs = new URLSearchParams(window.location.search);
    
        const hasSearchInColumns =
            qs.getAll("Filters.SearchInColumns").length > 0 ||
            qs.getAll("Filters[SearchInColumns]").length > 0 ||
            Array.from(qs.keys()).some(k => k.includes("Filters.SearchInColumns") || k.includes("Filters%5BSearchInColumns%5D"));
    
        const findByValue = (val) => {
            const v = (val || "").toLowerCase();
            return checks.find(c => (c.value || "").toLowerCase() === v) || null;
        };
    
        if (!hasSearchInColumns) {
            checks.forEach(c => c.checked = false);
            const toCheck = findByValue(defaultKey) || checks[0];
            if (toCheck) toCheck.checked = true;
        }
    
        const buildPlaceholder = () => {
            const selected = checks.filter(c => c.checked);
            const labels = selected.map(c => (c.dataset.label || c.value || "").trim()).filter(Boolean);
    
            if (labels.length === 1) return `Cerca in ${labels[0]}…`;
            if (labels.length === checks.length) return "Cerca in tutte le colonne…";
            return `Cerca in: ${labels.join(", ")}…`;
        };
    
        const updatePlaceholder = () => { input.placeholder = buildPlaceholder(); };
    
        const getCheckedCount = () => checks.filter(c => c.checked).length;
    
        checks.forEach(chk => {
            chk.addEventListener("change", () => {
                if (!chk.checked && getCheckedCount() === 0) {
                    chk.checked = true;
                    if (typeof notify === "function") {
                        notify("La ricerca richiede almeno un filtro selezionato.", "warning");
                    }
                }
                updatePlaceholder();
            });
        });
    
        updatePlaceholder();
    });
    </script>
}

