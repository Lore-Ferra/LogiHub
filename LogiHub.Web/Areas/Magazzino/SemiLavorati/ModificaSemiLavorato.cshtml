@model LogiHub.Web.Areas.Magazzino.SemiLavorati.ModificaSemiLavoratoViewModel


<form id="formModificaSemilavorato" class="modifica-form needs-validation" asp-action="Modifica" asp-area="Magazzino" method="post" novalidate>
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <div class="mb-3">
            <label asp-for="Barcode" class="form-label fw-bold text-uppercase text-muted small"></label>
            <input asp-for="Barcode" class="form-control form-control-lg" />
            <span asp-validation-for="Barcode" class="text-danger"></span>
        </div>
        <div class="mb-4">
            <label asp-for="Descrizione" class="form-label fw-bold text-uppercase text-muted small">Descrizione</label>
            <input asp-for="Descrizione" class="form-control form-control-lg" placeholder="Inserisci descrizione..." required />
            <div class="invalid-feedback">
                Descrizione obbligatoria
            </div>
            <span asp-validation-for="Descrizione" class="text-danger small"></span>
        </div>

        <div class="row mb-4">
            <div class="col-md-6">
                <label asp-for="UbicazioneId" class="form-label fw-bold text-uppercase text-muted small">Ubicazione</label>
                <select asp-for="UbicazioneId" asp-items="Model.UbicazioniList" class="form-select" required>
                    <option value="">-- Seleziona Ubicazione --</option>
                </select>
                <div class="invalid-feedback">
                    Ubicazione obbligatoria
                </div>
                <span asp-validation-for="UbicazioneId" class="text-danger small"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="AziendaEsternaId" class="form-label fw-bold text-uppercase text-muted small">In Carico a</label>
                <select asp-for="AziendaEsternaId" asp-items="Model.AziendeList" class="form-select">
                    <option value="">-- Seleziona Azienda --</option>
                </select>
            </div>
        </div>

        <div class="form-check form-switch mb-4">
            <input class="form-check-input" type="checkbox" asp-for="Uscito" id="Uscito">
            <label class="form-check-label" for="Uscito">
                Segna come uscito dal magazzino
            </label>
        </div>

        <div class="form-check form-switch mb-4">
            <input class="form-check-input" type="checkbox" id="Rientrato">
            <label class="form-check-label" for="Rientrato">
                Rientrato dal magazzino
            </label>
        </div>

        <hr class="my-4" />

        <div class="d-flex justify-content-end mt-4 gap-3">
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save me-2"></i>Salva Modifiche
            </button>
            
            <button type="button" 
                    class="btn btn-secondary"
                    data-offcanvas
                    data-id="offcanvasDettagli"
                    data-title="Dettagli semilavorato"
                    data-url="@Url.Action("Dettagli", "SemiLavorati", new { id = Model.Id })">
                Annulla
            </button>
        </div>
    </form>
