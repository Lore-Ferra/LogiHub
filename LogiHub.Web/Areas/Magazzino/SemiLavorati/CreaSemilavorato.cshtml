@model LogiHub.Web.Areas.Magazzino.SemiLavorati.CreaSemiLavoratoViewModel
@{
    Layout = null;
}

<form asp-action="CreaSemilavorato"
      asp-controller="SemiLavorati"
      asp-area="Magazzino"
      method="post">

    @Html.AntiForgeryToken()
    
    <div class="mb-3">
        <label class="form-label text-muted fw-medium d-block">Codice Barcode</label>
        <input asp-for="Barcode" class="form-control" placeholder="Scansiona(DA METTERE SOLO NEL MOBILE" />
        <span asp-validation-for="Barcode" class="text-danger"></span>
    </div>
    
    <div class="mb-3">
        <label class="form-label text-muted fw-medium d-block">Ubicazione</label>
        <select asp-for="UbicazioneId"
                asp-items="Model.UbicazioniList"
                class="form-select js-select-search">
            <option value=""></option>
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label text-muted fw-medium d-block">Descrizione</label>
        <textarea asp-for="Descrizione" class="form-control" rows="3"></textarea>
    </div>

    <div class="d-flex justify-content-end mt-4">
        <button type="submit" class="btn btn-outline-primary">
            Aggiungi
        </button>
    </div>
</form>
