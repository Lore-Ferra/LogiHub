@model LogiHub.Web.Areas.Magazzino.SemiLavorati.CreaSemiLavoratoViewModel
@{
    Layout = null;
}

<form asp-action="CreaSemilavorato"
      asp-controller="SemiLavorati"
      asp-area="Magazzino"
      method="post"
      class="p-4">

    @Html.AntiForgeryToken()

    <h1 class="text-uppercase text-muted fw-bold fs-6">Nuovo semilavorato</h1>
    
    <div class="mb-3">
        <label class="form-label text-muted d-block">ID Oggetto</label>
        <input asp-for="Id" class="form-control" />
    </div>
    
    <div class="mb-3">
        <label class="form-label text-muted d-block">Ubicazione</label>
        <select asp-for="UbicazioneId"
                asp-items="Model.UbicazioniList"
                class="form-select js-select-search">
            <option value=""></option>
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label text-muted d-block">Descrizione</label>
        <textarea asp-for="Descrizione" class="form-control" rows="3"></textarea>
    </div>

    <div class="d-flex justify-content-end mt-4">
        <button type="submit" class="btn btn-outline-primary">
            Aggiungi
        </button>
    </div>
</form>
