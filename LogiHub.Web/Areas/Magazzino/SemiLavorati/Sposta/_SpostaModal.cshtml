@model LogiHub.Web.Areas.Magazzino.SemiLavorati.SpostaSemiLavoratoViewModel

<div class="modal fade" id="modalSposta" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg">
            <div class="modal-header border-bottom-0 pb-0">
                <h5 class="modal-title fw-bold d-flex align-items-center gap-2">
                    <span class="text-primary"><i class="fa-solid fa-right-left"></i></span>
                    Sposta Semilavorato
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body pt-4">
                
                @* Info Card *@
                <div class="card bg-light border-0 mb-4">
                    <div class="card-body p-3">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <div>
                                <p class="small fw-bold text-primary text-uppercase mb-1">Articolo Selezionato</p>
                                <h6 class="fw-bold text-dark mb-0">@Model.Descrizione</h6>
                            </div>
                            <span class="badge bg-white text-primary border">@Model.Barcode</span>
                        </div>
                        <div class="d-flex align-items-center small text-muted mt-2">
                            <i class="fa-solid fa-location-dot me-2"></i>
                            Attuale: <span class="fw-bold text-dark ms-1">@Model.UbicazioneAttuale</span>
                        </div>
                    </div>
                </div>

                @* Form *@
                <form id="formSposta" asp-action="Sposta" asp-area="Magazzino" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" value="@Model.Id" />
                    <div class="mb-3">
                        <label class="form-label fw-bold small text-muted" for="nuovaUbicazioneId">Nuova Ubicazione</label>
                        <div class="input-group">
                            <span class="input-group-text bg-white text-muted"><i class="fa-solid fa-magnifying-glass"></i></span>
                            <select class="form-select" id="nuovaUbicazioneId" name="nuovaUbicazioneId" required asp-for="NuovaUbicazioneId" asp-items="Model.UbicazioniList">
                                <option value="">-- Seleziona Ubicazione --</option>
                            </select>
                        </div>
                        <div class="form-text small">Seleziona la nuova posizione fisica del semilavorato.</div>
                    </div>

                    <div class="d-flex justify-content-end gap-2 mt-4 pt-3 border-top">
                        <button type="button" class="btn btn-secondary border" data-bs-dismiss="modal">Annulla</button>
                        <button type="submit" class="btn btn-primary" disabled>
                            <i class="fa-solid fa-right-left me-2"></i>Sposta
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>