@model LogiHub.Web.Areas.Magazzino.Models.SemiLavoratiIndexViewModel
@using LogiHub.Web.Features.Modals
@{
    bool isBloccato = await BloccoService.IsBloccatoAsync();
}
@{
    ViewData["Title"] = "Gestione Semilavorati";
}

@section Styles {

    <link rel="stylesheet" href="~/css/fab-button.css"/>
    <link rel="stylesheet" href="~/css/offcanvas.css"/>
}


<div>
    @await Html.PartialAsync("~/Features/SearchCard/_SearchCard.cshtml", Model.SearchCard)
</div>

@{
    var count = Model.TotalItems;
    var verbo = count == 1 ? "Trovato" : "Trovati";
    var nome = count == 1 ? "semilavorato" : "semilavorati";
}

<div class="ps-1">
    <small class="text-muted">
        @verbo <strong id="semilavorati-counter">@count</strong> @nome
    </small>
</div>

<div class="d-md-none" id="mobile-list-container">
    @foreach (var item in Model.SemiLavorati)
    {
        <div class="card shadow-sm border-0 border-start border-5 mt-2"
             data-offcanvas
             data-id="offcanvasDettagli"
             data-title="Dettagli Semilavorato"
             data-url="/Magazzino/SemiLavorati/Dettagli?id=@item.Id"
             style="cursor:pointer;">
            <div class="card-body p-2">
                <p class="fw-bold fs-5 m-0 text-primary">
                    @item.Barcode
                </p>
                <hr class="my-1"/>
                <div class="d-flex justify-content-between align-items-start">
                    <div class="flex-grow-1 pe-3">
                        <div class="small text-muted mb-1">
                            <strong>Ubicazione:</strong>
                            <span class="badge @(item.Uscito ? "bg-info text-dark" : "bg-secondary")">
                                @(item.Uscito ? "Uscito" : item.CodiceUbicazione)
                            </span>
                        </div>
                        <div class="small text-muted mb-1">
                            <strong>Descrizione:</strong> @item.Descrizione
                        </div>
                        <div class="small text-muted">
                            <strong>Ultima mod.:</strong>
                            @item.UltimaModifica.ToString("dd/MM/yyyy")
                        </div>
                    </div>
                </div>
                
                <div class="d-flex gap-2 mt-3">
                    @if (isBloccato)
                    {
                        <button class="btn btn-sm btn-secondary disabled flex-fill w-100" disabled style="cursor: not-allowed; pointer-events: auto !important;" title="Magazzino bloccato">
                            <i class="fa-solid fa-lock me-2"></i>Sposta
                        </button>
                        <button class="btn btn-sm btn-secondary disabled flex-fill w-100" disabled style="cursor: not-allowed; pointer-events: auto !important;" title="Magazzino bloccato">
                            @if (item.Uscito)
                            {
                                <i class="fa-solid fa-lock me-2"></i><text>Rientro</text>
                            }
                            else
                            {
                                <i class="fa-solid fa-lock me-2"></i><text>Uscita</text>
                            }
                        </button>
                    }
                    else
                    {
                        @if (!item.Uscito)
                        {
                            <button type="button"
                                    class="btn btn-sm btn-outline-primary flex-fill w-100"
                                    onclick="apriModale(event, '@Url.Action("GetSpostaModal", "SemiLavorati", new { id = item.Id })')">
                                <i class="fa-solid fa-right-left me-2"></i>Sposta
                            </button>
                        }
                        else
                        {
                            <button type="button" 
                                    class="btn btn-sm btn-secondary disabled flex-fill w-100" 
                                    disabled
                                    title="Impossibile spostare: il pezzo è uscito"
                                    style="cursor: not-allowed; pointer-events: auto !important;">
                                <i class="fa-solid fa-lock me-2"></i>Sposta
                            </button>
                        }

                        <button type="button" 
                                class="btn btn-sm btn-outline-primary flex-fill w-100" 
                                onclick="apriModale(event, '@Url.Action("GetMovimentaModal", "SemiLavorati", new { id = item.Id })')">
                            @if (item.Uscito)
                            {
                                <i class="fa-solid fa-right-from-bracket fa-rotate-180 me-2"></i><text>Rientro</text>
                            }
                            else
                            {
                                <i class="fa-solid fa-right-from-bracket me-2"></i><text>Uscita</text>
                            }
                        </button>
                    }
                </div>
            </div>
        </div>
    }
    @if (!Model.SemiLavorati.Any())
    {
        <div class="text-center py-5 text-muted">
            <i class="fas fa-box-open fa-3x mb-3"></i>
            @if (!string.IsNullOrWhiteSpace(Model.SearchCard?.Query))
            {
                <p>Nessun risultato per "<strong>@Model.SearchCard.Query</strong>"</p>
                <p class="small text-muted mt-2">
                    Prova a cercare abilitando altri <strong>filtri</strong>. Prova a <a href="@Url.Action("Index")" class="fw-bold text-decoration-none" onclick="window.location.replace(this.href); return false;">pulire la ricerca</a>.
                </p>
            }
            else
            {
                <p>Nessun semilavorato trovato.</p>
            }
        </div>
    }
</div>

<div class="card border-0 shadow-sm d-none mt-1 d-md-block">
    <div class="card-body p-3">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead>
                <tr>
                    <th class="">Barcode</th>
                    <th>Descrizione</th>
                    <th class="text-center">Ubicazione</th>
                    <th>Ultima Modifica</th>
                    <th class="text-center">Azioni</th>
                </tr>
                </thead>
                <tbody id="desktop-table-body">
                @foreach (var item in Model.SemiLavorati)
                {
                    <tr style="cursor:pointer"
