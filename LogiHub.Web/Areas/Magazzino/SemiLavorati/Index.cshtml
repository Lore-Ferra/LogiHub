@{
    var confirmModel = new ConfirmModalViewModel
    {
        ModalId = "confirmDeleteModal",
        Title = "Elimina Semilavorato",
        Message = "Sei sicuro di voler eliminare ",
        ConfirmButtonText = "Elimina",
        ConfirmButtonClass = "btn-danger"
    };
}

<partial name="~/Features/Modals/_ConfirmModal.cshtml" model="confirmModel"/>

@* Container per modali caricati via AJAX *@
<div id="modalContainer"></div>

@section Scripts {
    <script src="~/js/Features/Modals/ConfirmModal.js"></script>
    <script src="~/js/Features/Offcanvas/offcanvas.js"></script>

    <script>
        function eliminaSemilavorato(e, url, msg) {
            e.preventDefault();
            e.stopPropagation();

            if (e.currentTarget.classList.contains('disabled')) return;

            const modalEl = document.getElementById('confirmDeleteModal');
            const modal = bootstrap.Modal.getOrCreateInstance(modalEl);

            const msgEl = modalEl.querySelector('.modal-body');
            if (msgEl) msgEl.innerHTML = msg;

            const confirmBtn = modalEl.querySelector('[data-confirm-btn]');
            const newBtn = confirmBtn.cloneNode(true);
            confirmBtn.parentNode.replaceChild(newBtn, confirmBtn);

            newBtn.onclick = async () => {
                newBtn.disabled = true;
                newBtn.innerHTML = '<i class="fa-solid fa-spinner fa-spin me-2"></i>Attendere...';

                try {
                    const tokenInput = document.querySelector('input[name="__RequestVerificationToken"]');
                    const formData = new FormData();
                    if (tokenInput) formData.append('__RequestVerificationToken', tokenInput.value);

                    const res = await fetch(url, {method: 'POST', body: formData});
                    const data = await res.json();

                    if (res.ok && data.success) {
                        sessionStorage.setItem("pendingToast", JSON.stringify({
                            msg: data.message || "Semilavorato eliminato con successo!",
                            type: "success"
                        }));
                        window.location.replace(window.location.href);
                    } else {
                        notify(data.message || "Impossibile eliminare il semilavorato.", "danger");
                    }


                } catch (err) {
                    console.error(err);
                    notify("Errore di connessione o del server", "danger");
                }
            };

            modal.show();
        }

        document.addEventListener('submit', function (e) {
            const form = e.target;

            // 1. Capisce se siamo in "Aggiungi" o "Dettagli/Modifica"
            const offcanvasAggiungi = form.closest('#offcanvasAggiungi');
            const offcanvasDettagli = form.closest('#offcanvasDettagli');

            if (!offcanvasAggiungi && !offcanvasDettagli) return;

            // 2. Blocca l'invio standard
            e.preventDefault();
            e.stopPropagation();

            // 3. Gestione Bottone (feedback visivo)
            const btn = form.querySelector('button[type="submit"]');
            const originalText = btn ? btn.innerHTML : '';

            if (!form.checkValidity()) {
                form.classList.add('was-validated');
                return;
            }

            if (btn) {
                btn.disabled = true;
                btn.innerHTML = '<i class="fa-solid fa-spinner fa-spin me-2"></i>Salvataggio...';
            }

            const formData = new FormData(form);

            fetch(form.action, {
                method: 'POST',
                body: formData,
                headers: { 'X-Requested-With': 'XMLHttpRequest' }
            })
                .then(async response => {
                    if (response.redirected) {
                        // 4. Notifica dinamica
                        const msg = offcanvasAggiungi ? "Semilavorato aggiunto con successo!" : "Semilavorato modificato con successo!";
                        sessionStorage.setItem("pendingToast", JSON.stringify({ msg, type: "success" }));

                        // 5. Chiudi l'offcanvas attivo (Aggiungi o Dettagli)
                        const activeOffcanvas = offcanvasAggiungi || offcanvasDettagli;
                        const instance = bootstrap.Offcanvas.getInstance(activeOffcanvas);
                        if (instance) instance.hide();

                        // 6. Ricarica la tabella
                        window.location.reload();
                    } else if (response.ok) {
                        // 7. Gestione Errore (Ricarica la partial con gli errori)
                        const html = await response.text();
                        const contentDiv = (offcanvasAggiungi || offcanvasDettagli).querySelector('[data-offcanvas-content]');

                        if (contentDiv) contentDiv.innerHTML = html;

                        if (btn) {
                            btn.disabled = false;
                            btn.innerHTML = originalText;
                        }
                    } else {
                        // Gestione Errori HTTP (es. 400, 500)
                        const html = await response.text();
                        const contentDiv = (offcanvasAggiungi || offcanvasDettagli).querySelector('[data-offcanvas-content]');

                        if (contentDiv) contentDiv.innerHTML = html;
                        notify("Si è verificato un errore", "danger");

                        if (btn) {
                            btn.disabled = false;
                            btn.innerHTML = originalText;
                        }
                    }
                })
                .catch(error => {
                    console.error('Errore:', error);
                    notify("Errore di rete o del server", "danger");
                    if (btn) {
                        btn.disabled = false;
                        btn.innerHTML = originalText;
                    }
                });
        }, true);
    </script>
    <script>
        async function apriModale(e, url) {
            e.preventDefault();
            e.stopPropagation();
            
            const container = document.getElementById('modalContainer');
            
            try {
                const res = await fetch(url);
                if (res.ok) {
                    container.innerHTML = await res.text();
                    
                    // Trova il primo modale nel container e mostralo
                    const modalEl = container.querySelector('.modal');
                    const modal = new bootstrap.Modal(modalEl);
                    modal.show();
                    
                    // Inizializza la logica di change detection specifica per il modale caricato
                    if (container.querySelector('#formSposta')) initSpostaModal();
                    if (container.querySelector('#formStato')) initMovimentaModal();
                    
                } else {
                    notify("Impossibile caricare il modale.", "danger");
                }
            } catch (err) {
                console.error(err);
                notify("Errore di connessione.", "danger");
            }
        }

        // --- LOGICA MODALE SPOSTA ---
        function initSpostaModal() {
            const form = document.getElementById('formSposta');
            if (!form) return;
            const select = document.getElementById('nuovaUbicazioneId');
            
            // Salva il valore iniziale (l'ubicazione corrente)
            const initialVal = select.value;
        }

        // --- LOGICA MODALE MOVIMENTA ---
        function initMovimentaModal() {
            const form = document.getElementById('formStato');
            if (!form) return;
            
            const ubiSelect = document.getElementById('statoUbicazioneId');
            const azSelect = document.getElementById('statoAziendaId');
            
            // Salva valori iniziali
            if (!ubiSelect.hasAttribute('data-initial')) ubiSelect.setAttribute('data-initial', ubiSelect.value);
            if (!azSelect.hasAttribute('data-initial')) azSelect.setAttribute('data-initial', azSelect.value);
            
            // Aggiungi listener a tutti gli input
            const inputs = form.querySelectorAll('input[type="radio"], select');
            inputs.forEach(el => el.addEventListener('change', updateMovimentaUI));
            
            // Esegui check iniziale
            updateMovimentaUI();
        }

        function updateMovimentaUI() {
            const form = document.getElementById('formStato');
            if (!form) return;
            
            const originalUscito = form.getAttribute('data-original-uscito') === 'true';
            
            const radioOut = document.getElementById('radioOut');
            const isUscito = radioOut.checked;
            
            const divRientro = document.getElementById('divRientro');
            const divUscita = document.getElementById('divUscita');
            const msgSposta = document.getElementById('msgUsaSposta');

            // 1. Gestione Visibilità
            if (isUscito) {
                divRientro.classList.add('d-none');
                divUscita.classList.remove('d-none');
                if(msgSposta) msgSposta.classList.add('d-none');
            } else {
                divUscita.classList.add('d-none');
                
                if (originalUscito) {
                    // Era FUORI, ora DENTRO (Rientro)
                    divRientro.classList.remove('d-none');
                    if(msgSposta) msgSposta.classList.add('d-none');
                } else {
                    // Era DENTRO, resta DENTRO (Bloccato -> Usa Sposta)
                    divRientro.classList.add('d-none');
                    if(msgSposta) msgSposta.classList.remove('d-none');
                }
            }
        }

        document.addEventListener('submit', async function (e) {
            const form = e.target;
            // Intercetta solo i form dentro il container dei modali dinamici
            if (!form.closest('#modalContainer')) return;

            e.preventDefault();
            e.stopPropagation();

            const btn = form.querySelector('button[type="submit"]');
            const originalText = btn ? btn.innerHTML : '';

            if (btn) {
                btn.disabled = true;
                btn.innerHTML = '<i class="fa-solid fa-spinner fa-spin me-2"></i>Attendere...';
            }

            try {
                const formData = new FormData(form);
                const res = await fetch(form.action, { method: 'POST', body: formData });
                
                const contentType = res.headers.get("content-type");
                
                if (contentType && contentType.indexOf("application/json") !== -1) {
                    // Risposta JSON (Successo o Errore generico)
                    const data = await res.json();
                    if (data.success) {
                        sessionStorage.setItem("pendingToast", JSON.stringify({ msg: data.message, type: "success" }));
                        window.location.replace(window.location.href);
                    } else {
                        notify(data.message || "Errore durante l'operazione", "danger");
                        if (btn) {
                            btn.disabled = false;
                            btn.innerHTML = originalText;
                        }
                    }
                } else {
                    // Risposta HTML (Errori di validazione)
                    const html = await res.text();
                    const container = document.getElementById('modalContainer');
                    
                    // Parsing del nuovo HTML per aggiornamento parziale (evita sfarfallio)
                    const parser = new DOMParser();
                    const doc = parser.parseFromString(html, 'text/html');
                    const newContent = doc.querySelector('.modal-content');
                    const currentModal = container.querySelector('.modal.show');
                    
                    if (currentModal && newContent && currentModal.querySelector('.modal-content')) {
                        const currentContent = currentModal.querySelector('.modal-content');
                        
                        currentContent.replaceWith(newContent);
                        
                        // Re-inizializza la logica specifica del modale
                        if (newContent.querySelector('#formSposta')) initSpostaModal();
                        if (newContent.querySelector('#formStato')) initMovimentaModal();
                        return;
                    }
                    
                    // Rimuovo eventuali backdrop vecchi per evitare duplicati
                    document.querySelectorAll('.modal-backdrop').forEach(el => el.remove());
                    
                    container.innerHTML = html;
                    
                    // Re-inizializzo il modale
                    const modalEl = container.querySelector('.modal');
                    const modal = new bootstrap.Modal(modalEl);
                    modal.show();
                    
                    // Re-inizializzo la logica UI
                    if (container.querySelector('#formSposta')) initSpostaModal();
                    if (container.querySelector('#formStato')) initMovimentaModal();
                }
            } catch (err) {
                console.error(err);
                notify("Errore di rete.", "danger");
                if (btn) { btn.disabled = false; btn.innerHTML = originalText; }
            }
        }, false);
    </script>

    <script>
        document.addEventListener('click', async function (e) {

            const btn = e.target.closest('#btnScanBarcode');
            if (!btn || btn.disabled) return;

            e.preventDefault();

            const container = btn.closest('form');
            if (!container) return;

            const barcodeInput = container.querySelector('#barcodeInput');
            if (!barcodeInput) return;

            btn.disabled = true;
            btn.innerHTML = '<span class="spinner-border spinner-border-sm me-1"></span>Generazione...';

            try {
                const response = await fetch('/Magazzino/SemiLavorati/GeneraBarcodeUnivoco');
                const barcode = await response.json();

                barcodeInput.value = barcode;
                barcodeInput.focus();
            } catch {
                notify("Errore durante la generazione del barcode univoco.", "danger");
            } finally {
                btn.disabled = false;
                btn.innerHTML = '<i class="bi bi-upc-scan me-1"></i>Scansiona Barcode';
            }

        }, true);
    </script>
    <script>
        document.addEventListener('focusout', async function (e) {

            const input = e.target;
            if (!input || (input.id !== 'barcodeInput' && input.name !== 'Barcode')) return;

            const barcode = input.value.trim();

            const feedbackDiv = input.parentElement.querySelector('.invalid-feedback') ||
                document.querySelector(`[data-valmsg-for="${input.name}"]`);

            const defaultMessage = "Codice Barcode obbligatorio";

            if (!barcode) {
                input.setCustomValidity("");
                input.classList.remove('is-invalid');
                if (feedbackDiv) {
                    feedbackDiv.textContent = defaultMessage;
                    feedbackDiv.style.display = '';
                }
                return;
            }

            const form = input.closest('form');
            const idInput = form ? form.querySelector('input[name="Id"]') : null;
            const currentId = idInput ? idInput.value : '';

            try {
                let url = `/Magazzino/SemiLavorati/VerificaEsistenzaBarcode?barcode=${encodeURIComponent(barcode)}`;
                if (currentId) {
                    url += `&idEscluso=${currentId}`;
                }

                const response = await fetch(url);
                const data = await response.json();

                if (data.esiste) {
                    input.setCustomValidity("Esiste già");
                    input.classList.add('is-invalid');

                    if (feedbackDiv) {
                        feedbackDiv.textContent = "Barcode già presente nel sistema!";
                        feedbackDiv.style.display = 'block';
                        feedbackDiv.classList.add('text-danger');
                    }
                } else {
                    input.setCustomValidity("");
                    input.classList.remove('is-invalid');

                    if (feedbackDiv) {
                        feedbackDiv.textContent = defaultMessage;
                        feedbackDiv.style.display = '';
                    }
                }
            } catch (error) {
                console.error("Errore verifica barcode", error);
            }

        }, true);
    </script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const counter = document.getElementById('semilavorati-counter');

            const updateCounter = () => {
                if (!counter) return;
                let count = parseInt(counter.innerText);
                if (!isNaN(count) && count > 0) {
                    counter.innerText = count - 1;
                }
            };

            const observer = new MutationObserver((mutations) => {
                mutations.forEach((mutation) => {
                    if (mutation.removedNodes.length > 0) {
                        updateCounter();
                    }
                });
            });

            const config = {childList: true};
            const mobileContainer = document.getElementById('mobile-list-container');
            const desktopBody = document.getElementById('desktop-table-body');

            if (mobileContainer) observer.observe(mobileContainer, config);
            if (desktopBody) observer.observe(desktopBody, config);
        });
    </script>
