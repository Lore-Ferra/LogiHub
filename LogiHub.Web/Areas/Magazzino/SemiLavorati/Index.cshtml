                                            title="@(item.Uscito ? "Rientro" : "Uscita")"
                                            onclick="apriModale(event, '@Url.Action("GetMovimentaModal", "SemiLavorati", new { id = item.Id })')">
                                        @if (item.Uscito)
                                        {
                                            <i class="fa-solid fa-right-from-bracket fa-rotate-180 me-1"></i> <text>Fai Entrare</text>
                                        }
                                        else
                                        {
                                            <i class="fa-solid fa-right-from-bracket me-1"></i> <text>Fai Uscire</text>
                                        }
                                    </button>
