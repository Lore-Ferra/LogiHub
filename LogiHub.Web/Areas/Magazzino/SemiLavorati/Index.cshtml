                        data-id="offcanvasDettagli"
                        title="Dettagli Semilavorato"
                        data-title="Dettagli Semilavorato"
                        data-url="/Magazzino/SemiLavorati/Dettagli?id=@item.Id">
                        <td class="fw-bold text-primary">
                            <div>@item.Barcode</div>
                        </td>
                        <td>@item.Descrizione</td>
                        <td class="text-center">
                                <span class="badge @(item.Uscito ? "bg-info text-dark" : "bg-secondary")">
                                    @(item.Uscito ? "Uscito" : item.CodiceUbicazione)
                                </span>
                        </td>

                        <td>@item.UltimaModifica.ToString("dd/MM/yyyy")</td>
                        <td class="text-center">
                            <div class="d-flex gap-1 justify-content-center text-nowrap">
                                @if (isBloccato)
                                {
                                    <button class="btn btn-sm btn-secondary disabled" disabled style="cursor: not-allowed; pointer-events: auto !important;" title="Magazzino bloccato">
                                        <i class="fa-solid fa-lock me-1"></i> Sposta
                                    </button>
                                    <button class="btn btn-sm btn-secondary disabled" disabled style="cursor: not-allowed; pointer-events: auto !important;" title="Magazzino bloccato">
                                        @if (item.Uscito)
                                        {
                                            <i class="fa-solid fa-lock me-1"></i> <text>Fai Entrare</text>
                                        }
                                        else
                                        {
                                            <i class="fa-solid fa-lock me-1"></i> <text>Fai Uscire</text>
                                        }
                                    </button>
                                }
                                else
                                {
                                    @if (!item.Uscito)
                                    {
                                        <button type="button"
