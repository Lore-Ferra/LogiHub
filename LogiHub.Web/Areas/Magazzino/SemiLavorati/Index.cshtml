@using LogiHub.Web.Features.SearchCard
@model LogiHub.Web.Areas.Magazzino.Models.SemiLavoratiIndexViewModel

@{
    ViewData["Title"] = "Gestione Semilavorati";
}
@section Styles {
    <link rel="stylesheet" href="~/css/magazzinosemilavorati.css" />
    <link rel="stylesheet" href="~/css/offcanvas.css" />
}
<div>
    @await Html.PartialAsync("~/Features/SearchCard/_SearchCard.cshtml", new SearchCardViewModel
    {
        Title = "📦 Magazzino Semilavorati",
        InputValue = Model.Filter,
        Buttons = new List<SearchCardButton>
        {
            new()
            {
                Text = "Aggiungi",
                CssClass = "btn-primary",
                Type = "button",
                IconClass = "fa-solid fa-plus",
                HtmlAttributes = new Dictionary<string, string>
                {
                    { "data-offcanvas", "" },
                    { "data-id", "offcanvasAggiungi" },
                    { "data-url", "/Magazzino/SemiLavorati/AggiungiSemilavorato" },
                    { "data-title", "Aggiungi Semilavorato" },
                    { "title", "Aggiungi Semilavorato" }
                }            }
        },
        HiddenFields = new Dictionary<string, string>
        {
            { "Page", "1" },
            { "PageSize", Model.PageSize.ToString() }
        }
    })
</div>

<div class="d-md-none">
    @foreach (var item in Model.SemiLavorati)
    {
        <div class="card shadow-sm semilavorato-card mb-2"
             data-offcanvas
             data-id="offcanvasDettagli"
             data-title="Dettagli Semilavorato"
             data-url="/Magazzino/SemiLavorati/Dettagli?id=@item.Id">
            <div class="card-body">
                <div class="fw-bold fs-5 mb-2 text-primary">
                    @item.Barcode
                </div>
                <hr class="my-2" />
                <div class="d-flex justify-content-between align-items-start">
                    <div class="flex-grow-1 pe-3">
                        <div class="small text-muted mb-1">
                            <strong>Ubicazione:</strong>
                            <span class="badge bg-secondary">@item.CodiceUbicazione</span>
                        </div>
                        <div class="small text-muted mb-1">
                            <strong>Descrizione:</strong> @item.Descrizione
                        </div>
                        <div class="small text-muted">
                            <strong>Ultima mod.:</strong>
                            @item.UltimaModifica.ToString("dd/MM/yyyy")
                        </div>
                    </div>
                    <div class="d-flex gap-3 align-items-center">
                        <i class="bi bi-trash3 text-danger" data-delete data-id="@item.Id" data-label="@item.Barcode" style="cursor:pointer;"></i>
                    </div>
                </div>
            </div>
        </div>
    }
    @if (!Model.SemiLavorati.Any())
    {
        <div class="text-center py-5 text-muted">
            <i class="fas fa-box-open fa-3x mb-3"></i>
            <p>Nessun semilavorato trovato.</p>
        </div>
    }
</div>

<div class="card shadow d-none d-md-block">
    <div class="card-body p-1">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0 text-center">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4">Barcode</th>
                        <th>Descrizione</th>
                        <th>Ubicazione</th>
                        <th>Ultima Modifica</th>
                        <th>Azioni</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.SemiLavorati)
                    {
                        <tr style="cursor:pointer"
                            data-offcanvas
                            data-id="offcanvasDettagli"
                            title="Dettagli Semilavorato"
                            data-title="Dettagli Semilavorato"
                            data-url="/Magazzino/SemiLavorati/Dettagli?id=@item.Id">
                            <td class="ps-4 fw-bold text-primary">
                                <div>@item.Barcode</div>
                            </td>
                            <td>@item.Descrizione</td>
                            <td>
                                <span class="badge bg-secondary">@item.CodiceUbicazione</span>
                            </td>
                            <td>@item.UltimaModifica.ToString("dd/MM/yyyy")</td>
                            <td>
                                <button
                                    type="button"
                                    class="btn btn-sm btn-outline-danger"
                                    data-delete
                                    data-id="@item.Id"
                                    data-label="@item.Barcode"
                                    title="Elimina">
                                    <i class="bi bi-trash3"></i>
                                </button>
                            </td>

                        </tr>
                    }

                    @if (!Model.SemiLavorati.Any())
                    {
                        <tr>
                            <td colspan="6" class="text-center py-5 text-muted">
                                <i class="fas fa-box-open fa-3x mb-3"></i>
                                <p>Nessun semilavorato trovato.</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<a class="fab d-md-none"
   title="Aggiungi semilavorato"
   data-title="Aggiungi Semilavorato"
   data-offcanvas
   data-id="offcanvasAggiungi"
   data-url="/Magazzino/SemiLavorati/AggiungiSemilavorato">
    <i class="fa-solid fa-plus"></i>
</a>


@{
    var offcanvasModel = new LogiHub.Web.Features.Offcanvas.OffcanvasViewModel
    {
        Id = "offcanvasDettagli",
        Title = "Dettagli semilavorato"
    };
}

<partial name="~/Features/Offcanvas/_Offcanvas.cshtml"
         model="offcanvasModel" />

@{
    var offcanvasAggiungiModel = new LogiHub.Web.Features.Offcanvas.OffcanvasViewModel
    {
        Id = "offcanvasAggiungi",
        Title = "Aggiungi semilavorato"
    };
}

<partial name="~/Features/Offcanvas/_Offcanvas.cshtml"
         model="offcanvasAggiungiModel" />

<!-- Modal Conferma Eliminazione -->
@{
    var confirmDeleteModel = new LogiHub.Web.Features.Modals.ConfirmDeleteModalViewModel
    {
        ModalId = "confirmDeleteModal",
        Endpoint = "/Magazzino/SemiLavorati/Elimina"
    };
}

<partial name="~/Features/Modals/_ConfirmDeleteModal.cshtml"
         model="confirmDeleteModel" />


@section Scripts {
    <script src="./js/Features/Offcanvas/offcanvas.js"></script>
    <script src="./js/Features/Modals/confirmDeleteModal.js"></script>
    
    <script>
        document.addEventListener('submit', function (e) {
            
            const form = e.target;
            if (form.id !== 'formAggiungiSemilavorato') return;

            e.preventDefault();
            e.stopPropagation();

            if (!form.checkValidity()) {
                form.classList.add('was-validated');
                return;
            }

            const formData = new FormData(form);
            
            fetch(form.action, {
                method: 'POST',
                body: formData
            })
            .then(response => {
                if (response.ok) {
                    window.location.reload();
                } else {
                    return response.text().then(html => {
                        const contentDiv = document.querySelector('#offcanvasAggiungi [data-offcanvas-content]');
                        if(contentDiv) contentDiv.innerHTML = html;
                    });
                }
            })
            .catch(error => {
                console.error('Errore:', error);
                alert("Si è verificato un errore imprevisto.");
                btn.disabled = false;
                btn.innerHTML = originalText;
            });

        }, true);
    </script>
    
    <script>
    document.addEventListener('click', async function (e) {

        const btn = e.target.closest('#btnScanBarcode');
        if (!btn) return;

        e.preventDefault();

        const container = btn.closest('form');
        if (!container) return;

        const barcodeInput = container.querySelector('#barcodeInput');
        if (!barcodeInput) return;

        btn.disabled = true;
        btn.innerHTML = '<span class="spinner-border spinner-border-sm me-1"></span>Generazione...';

        try {
            const response = await fetch('/Magazzino/SemiLavorati/GeneraBarcodeUnivoco');
            const barcode = await response.json();

            barcodeInput.value = barcode;
            barcodeInput.focus();
        }
        catch {
            alert('Errore durante la generazione del barcode');
        }
        finally {
            btn.disabled = false;
            btn.innerHTML = '<i class="bi bi-upc-scan me-1"></i>Scansiona Barcode';
        }

    }, true);
    </script>
    <script>
        document.addEventListener('focusout', async function(e) {

            // 1. Controlliamo che l'evento arrivi dal nostro input 'barcodeInput'
            if (!e.target || e.target.id !== 'barcodeInput') return;

            const input = e.target;
            const barcode = input.value.trim();
            const feedbackDiv = input.parentElement.querySelector('.invalid-feedback');
            const defaultMessage = "Codice Barcode obbligatorio"; // Messaggio originale

            // Se è vuoto, lasciamo gestire l'errore al 'required' standard
            if (!barcode) {
                input.setCustomValidity("");
                if(feedbackDiv) feedbackDiv.textContent = defaultMessage;
                return;
            }

            try {
                const response = await fetch(`/Magazzino/SemiLavorati/VerificaEsistenzaBarcode?barcode=${encodeURIComponent(barcode)}`);
                const data = await response.json();

                if (data.esiste) {
                    input.setCustomValidity("Esiste già");

                    if(feedbackDiv) feedbackDiv.textContent = "Barcode già presente nel sistema!";

                    input.classList.add('is-invalid');
                } else {
                    input.setCustomValidity("");
                    if(feedbackDiv) feedbackDiv.textContent = defaultMessage;
                    input.classList.remove('is-invalid');
                }
            } catch (error) {
                console.error("Errore verifica barcode", error);
            }

        }, true);
    </script>
}
