@model LogiHub.Web.Areas.Magazzino.Models.SemiLavoratiIndexViewModel
@using LogiHub.Web.Features.Modals
@{
    bool isBloccato = await BloccoService.IsBloccatoAsync();
}
@{
    ViewData["Title"] = "Gestione Semilavorati";
}

@section Styles {
    <link rel="stylesheet" href="~/css/fab-button.css"/>
    <link rel="stylesheet" href="~/css/offcanvas.css"/>
}

@if (isBloccato)
{
    <div class="alert alert-warning border-0 shadow-sm mb-3 d-flex align-items-center">
        <i class="fa-solid fa-triangle-exclamation me-3 fa-lg"></i>
        <div>
            <strong>Magazzino Bloccato:</strong> Inventario in corso. Inserimento, modifica ed eliminazione
            disabilitati.

        </div>
    </div>
}
<div>
    @await Html.PartialAsync("~/Features/SearchCard/_SearchCard.cshtml", Model.SearchCard)
</div>

@{
    var count = Model.TotalItems;
    var verbo = count == 1 ? "Trovato" : "Trovati";
    var nome = count == 1 ? "semilavorato" : "semilavorati";
}

<div class="ps-1">
    <small class="text-muted">
        @verbo <strong id="semilavorati-counter">@count</strong> @nome
    </small>
</div>

<div class="d-md-none" id="mobile-list-container">
    @foreach (var item in Model.SemiLavorati)
    {
        <div class="card shadow-sm border-0 border-start border-5 mt-2"
             data-offcanvas
             data-id="offcanvasDettagli"
             data-title="Dettagli Semilavorato"
             data-url="/Magazzino/SemiLavorati/Dettagli?id=@item.Id"
             style="cursor:pointer;">
            <div class="card-body p-2">
                <p class="fw-bold fs-5 m-0 text-primary">
                    @item.Barcode
                </p>
                <hr class="my-1"/>
                <div class="d-flex justify-content-between align-items-start">
                    <div class="flex-grow-1 pe-3">
                        <div class="small text-muted mb-1">
                            <strong>Ubicazione:</strong>
                            <span class="badge @(item.Uscito ? "bg-info text-dark" : "bg-secondary")">
                                @(item.Uscito ? "Uscito" : item.CodiceUbicazione)
                            </span>
                        </div>
                        <div class="small text-muted mb-1">
                            <strong>Descrizione:</strong> @item.Descrizione
                        </div>
                        <div class="small text-muted">
                            <strong>Ultima mod.:</strong>
                            @item.UltimaModifica.ToString("dd/MM/yyyy")
                        </div>
                    </div>
                    <div class="d-flex gap-3 align-items-center text-black">
                        <button
                            type="button"
                            class="btn btn-md @(isBloccato ? "btn-secondary disabled" : "btn-outline-danger")"
                            onclick="eliminaSemilavorato(event, '@Url.Action("Elimina", "SemiLavorati", new { area = "Magazzino", semiLavoratoId = item.Id })', 'Sei sicuro di voler eliminare <strong>@item.Barcode</strong>?')"
                            title="Elimina"
                            style="@(isBloccato ? "cursor: not-allowed; pointer-events: auto !important;" : "")">
                            <i class="@(isBloccato ? "fa-solid fa-lock" : "fa-solid fa-trash")"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    }
    @if (!Model.SemiLavorati.Any())
    {
        <div class="text-center py-5 text-muted">
            <i class="fas fa-box-open fa-3x mb-3"></i>
            <p>Nessun semilavorato trovato.</p>
        </div>
    }
</div>

<div class="card border-0 shadow-sm d-none mt-1 d-md-block">
    <div class="card-body p-3">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead>
                <tr>
                    <th class="">Barcode</th>
                    <th>Descrizione</th>
                    <th class="text-center">Ubicazione</th>
                    <th>Ultima Modifica</th>
                    <th class="text-center">Azioni</th>
                </tr>
                </thead>
                <tbody id="desktop-table-body">
                @foreach (var item in Model.SemiLavorati)
                {
                    <tr style="cursor:pointer"
                        data-offcanvas
                        data-id="offcanvasDettagli"
                        title="Dettagli Semilavorato"
                        data-title="Dettagli Semilavorato"
                        data-url="/Magazzino/SemiLavorati/Dettagli?id=@item.Id">
                        <td class="fw-bold text-primary">
                            <div>@item.Barcode</div>
                        </td>
                        <td>@item.Descrizione</td>
                        <td class="text-center">
                                <span class="badge @(item.Uscito ? "bg-info text-dark" : "bg-secondary")">
                                    @(item.Uscito ? "Uscito" : item.CodiceUbicazione)
                                </span>
                        </td>

                        <td>@item.UltimaModifica.ToString("dd/MM/yyyy")</td>
                        <td class="text-center">
                            <button
                                type="button"
                                class="btn btn-sm @(isBloccato ? "btn-secondary disabled" : "btn-outline-danger")"
                                onclick="eliminaSemilavorato(event, '@Url.Action("Elimina", "SemiLavorati", new { area = "Magazzino", semiLavoratoId = item.Id })', 'Sei sicuro di voler eliminare <strong>@item.Barcode</strong>?')"
                                title="Elimina"
                                style="@(isBloccato ? "cursor: not-allowed; pointer-events: auto !important;" : "")">
                                <i class="@(isBloccato ? "fa-solid fa-lock me-1" : "fa-solid fa-trash")"></i>
                                Elimina
                            </button>
                        </td>

                    </tr>
                }

                @if (!Model.SemiLavorati.Any())
                {
                    <tr>
                        <td colspan="6" class="text-center py-5 text-muted">
                            <i class="fas fa-box-open fa-3x mb-3"></i>
                            <p>Nessun semilavorato trovato.</p>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>
@if (!isBloccato)
{
    <button type="button"
            class="fab d-md-none border-0"
            data-offcanvas
            data-id="offcanvasAggiungi"
            data-title="Aggiungi Semilavorato"
            data-url="/Magazzino/SemiLavorati/AggiungiSemilavorato">
        <i class="fa-solid fa-plus text-white"></i>
    </button>
}
else
{
    <button class="fab d-md-none btn btn-primary disabled" title="Aggiunta bloccata"
            style="cursor: not-allowed; pointer-events: auto !important;">
        <i class="fa-solid fa-lock"></i>
    </button>
}


@{
    var offcanvasModel = new LogiHub.Web.Features.Offcanvas.OffcanvasViewModel
    {
        Id = "offcanvasDettagli",
        Title = "Dettagli semilavorato"
    };
}

<partial name="~/Features/Offcanvas/_Offcanvas.cshtml"
         model="offcanvasModel"/>

@{
    var offcanvasAggiungiModel = new LogiHub.Web.Features.Offcanvas.OffcanvasViewModel
    {
        Id = "offcanvasAggiungi",
        Title = "Aggiungi semilavorato"
    };
}

<partial name="~/Features/Offcanvas/_Offcanvas.cshtml"
         model="offcanvasAggiungiModel"/>

<!-- Modal Conferma Eliminazione -->
@{
    var confirmModel = new ConfirmModalViewModel
    {
        ModalId = "confirmDeleteModal",
        Title = "Elimina Semilavorato",
        Message = "Sei sicuro di voler eliminare ",
        ConfirmButtonText = "Elimina",
        ConfirmButtonClass = "btn-danger"
    };
}

<partial name="~/Features/Modals/_ConfirmModal.cshtml" model="confirmModel"/>


@section Scripts {
    <script src="~/js/Features/Modals/ConfirmModal.js"></script>
    <script src="~/js/Features/Offcanvas/offcanvas.js"></script>

    <script>
        function eliminaSemilavorato(e, url, msg) {
            e.preventDefault();
            e.stopPropagation();

            if (e.currentTarget.classList.contains('disabled')) return;

            const modalEl = document.getElementById('confirmDeleteModal');
            const modal = bootstrap.Modal.getOrCreateInstance(modalEl);

            const msgEl = modalEl.querySelector('.modal-body');
            if (msgEl) msgEl.innerHTML = msg;

            const confirmBtn = modalEl.querySelector('[data-confirm-btn]');
            const newBtn = confirmBtn.cloneNode(true);
            confirmBtn.parentNode.replaceChild(newBtn, confirmBtn);

            newBtn.onclick = async () => {
                newBtn.disabled = true;
                newBtn.innerHTML = '<i class="fa-solid fa-spinner fa-spin me-2"></i>Attendere...';

                try {
                    const tokenInput = document.querySelector('input[name="__RequestVerificationToken"]');
                    const formData = new FormData();
                    if (tokenInput) formData.append('__RequestVerificationToken', tokenInput.value);

                    const res = await fetch(url, {method: 'POST', body: formData});
                    const data = await res.json();

                    if (res.ok && data.success) {
                        sessionStorage.setItem("pendingToast", JSON.stringify({
                            msg: data.message || "Semilavorato eliminato con successo!",
                            type: "success"
                        }));
                        window.location.replace(window.location.href);
                    } else {
                        notify(data.message || "Impossibile eliminare il semilavorato.", "danger");
                    }


                } catch (err) {
                    console.error(err);
                    notify("Errore di connessione o del server", "danger");
                }
            };

            modal.show();
        }

        document.addEventListener('submit', function (e) {
            const form = e.target;

            // 1. Capisce se siamo in "Aggiungi" o "Dettagli/Modifica"
            const offcanvasAggiungi = form.closest('#offcanvasAggiungi');
            const offcanvasDettagli = form.closest('#offcanvasDettagli');

            if (!offcanvasAggiungi && !offcanvasDettagli) return;

            // 2. Blocca l'invio standard
            e.preventDefault();
            e.stopPropagation();

            // 3. Gestione Bottone (feedback visivo)
            const btn = form.querySelector('button[type="submit"]');
            const originalText = btn ? btn.innerHTML : '';

            if (!form.checkValidity()) {
                form.classList.add('was-validated');
                return;
            }

            if (btn) {
                btn.disabled = true;
                btn.innerHTML = '<i class="fa-solid fa-spinner fa-spin me-2"></i>Salvataggio...';
            }

            const formData = new FormData(form);

            fetch(form.action, {
                method: 'POST',
                body: formData,
                headers: { 'X-Requested-With': 'XMLHttpRequest' }
            })
                .then(async response => {
                    if (response.redirected) {
                        // 4. Notifica dinamica
                        const msg = offcanvasAggiungi ? "Semilavorato aggiunto!" : "Semilavorato modificato!";
                        sessionStorage.setItem("pendingToast", JSON.stringify({ msg, type: "success" }));

                        // 5. Chiudi l'offcanvas attivo (Aggiungi o Dettagli)
                        const activeOffcanvas = offcanvasAggiungi || offcanvasDettagli;
                        const instance = bootstrap.Offcanvas.getInstance(activeOffcanvas);
                        if (instance) instance.hide();

                        // 6. Ricarica la tabella
                        window.location.reload();
                    } else if (response.ok) {
                        // 7. Gestione Errore (Ricarica la partial con gli errori)
                        const html = await response.text();
                        const contentDiv = (offcanvasAggiungi || offcanvasDettagli).querySelector('[data-offcanvas-content]');

                        if (contentDiv) contentDiv.innerHTML = html;

                        if (btn) {
                            btn.disabled = false;
                            btn.innerHTML = originalText;
                        }
                    } else {
                        // Gestione Errori HTTP (es. 400, 500)
                        const html = await response.text();
                        const contentDiv = (offcanvasAggiungi || offcanvasDettagli).querySelector('[data-offcanvas-content]');

                        if (contentDiv) contentDiv.innerHTML = html;
                        notify("Si è verificato un errore", "danger");

                        if (btn) {
                            btn.disabled = false;
                            btn.innerHTML = originalText;
                        }
                    }
                })
                .catch(error => {
                    console.error('Errore:', error);
                    notify("Errore di rete o del server", "danger");
                    if (btn) {
                        btn.disabled = false;
                        btn.innerHTML = originalText;
                    }
                });
        }, true);
    </script>

    <script>
        document.addEventListener('click', async function (e) {

            const btn = e.target.closest('#btnScanBarcode');
            if (!btn || btn.disabled) return;

            e.preventDefault();

            const container = btn.closest('form');
            if (!container) return;

            const barcodeInput = container.querySelector('#barcodeInput');
            if (!barcodeInput) return;

            btn.disabled = true;
            btn.innerHTML = '<span class="spinner-border spinner-border-sm me-1"></span>Generazione...';

            try {
                const response = await fetch('/Magazzino/SemiLavorati/GeneraBarcodeUnivoco');
                const barcode = await response.json();

                barcodeInput.value = barcode;
                barcodeInput.focus();
            } catch {
                notify("Errore durante la generazione del barcode univoco.", "danger");
            } finally {
                btn.disabled = false;
                btn.innerHTML = '<i class="bi bi-upc-scan me-1"></i>Scansiona Barcode';
            }

        }, true);
    </script>
    <script>
        document.addEventListener('focusout', async function (e) {

            const input = e.target;
            if (!input || (input.id !== 'barcodeInput' && input.name !== 'Barcode')) return;

            const barcode = input.value.trim();

            const feedbackDiv = input.parentElement.querySelector('.invalid-feedback') ||
                document.querySelector(`[data-valmsg-for="${input.name}"]`);

            const defaultMessage = "Codice Barcode obbligatorio";

            if (!barcode) {
                input.setCustomValidity("");
                input.classList.remove('is-invalid');
                if (feedbackDiv) {
                    feedbackDiv.textContent = defaultMessage;
                    feedbackDiv.style.display = '';
                }
                return;
            }

            const form = input.closest('form');
            const idInput = form ? form.querySelector('input[name="Id"]') : null;
            const currentId = idInput ? idInput.value : '';

            try {
                let url = `/Magazzino/SemiLavorati/VerificaEsistenzaBarcode?barcode=${encodeURIComponent(barcode)}`;
                if (currentId) {
                    url += `&idEscluso=${currentId}`;
                }

                const response = await fetch(url);
                const data = await response.json();

                if (data.esiste) {
                    input.setCustomValidity("Esiste già");
                    input.classList.add('is-invalid');

                    if (feedbackDiv) {
                        feedbackDiv.textContent = "Barcode già presente nel sistema!";
                        feedbackDiv.style.display = 'block';
                        feedbackDiv.classList.add('text-danger');
                    }
                } else {
                    input.setCustomValidity("");
                    input.classList.remove('is-invalid');

                    if (feedbackDiv) {
                        feedbackDiv.textContent = defaultMessage;
                        feedbackDiv.style.display = '';
                    }
                }
            } catch (error) {
                console.error("Errore verifica barcode", error);
            }

        }, true);
    </script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const counter = document.getElementById('semilavorati-counter');

            const updateCounter = () => {
                if (!counter) return;
                let count = parseInt(counter.innerText);
                if (!isNaN(count) && count > 0) {
                    counter.innerText = count - 1;
                }
            };

            const observer = new MutationObserver((mutations) => {
                mutations.forEach((mutation) => {
                    if (mutation.removedNodes.length > 0) {
                        updateCounter();
                    }
                });
            });

            const config = {childList: true};
            const mobileContainer = document.getElementById('mobile-list-container');
            const desktopBody = document.getElementById('desktop-table-body');

            if (mobileContainer) observer.observe(mobileContainer, config);
            if (desktopBody) observer.observe(desktopBody, config);
        });
    </script>
    <script>
    document.addEventListener("DOMContentLoaded", () => {
        const pending = sessionStorage.getItem("pendingToast");
        if (!pending) return;
    
        try {
            const { msg, type } = JSON.parse(pending);
            notify(msg, type || "success");
        } finally {
            sessionStorage.removeItem("pendingToast");
        }
            });
    </script>
}
