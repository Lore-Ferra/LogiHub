@model LogiHub.Web.Areas.Magazzino.Models.SemiLavoratiIndexViewModel
@inject LogiHub.Services.Shared.IBloccoMagazzinoService BloccoService
@{
    bool isBloccato = await BloccoService.IsBloccatoAsync();
}
@{
    ViewData["Title"] = "Gestione Semilavorati";
}

@section Styles {
    <link rel="stylesheet" href="~/css/magazzinosemilavorati.css"/>
    <link rel="stylesheet" href="~/css/offcanvas.css"/>
}

@if (isBloccato)
{
    <div class="alert alert-warning opacity-100 border-0 shadow-sm mb-3 d-flex align-items-center">
        <i class="fa-solid fa-triangle-exclamation me-3 fa-lg"></i>
        <div>
            <strong>Magazzino Bloccato:</strong> Inventario in corso. Inserimento, modifica ed eliminazione
            disabilitati.

        </div>
    </div>
}
<div>
    @await Html.PartialAsync("~/Features/SearchCard/_SearchCard.cshtml", Model.SearchCard)
</div>

<div class="d-md-none">
    @foreach (var item in Model.SemiLavorati)
    {
        <div class="card shadow-sm semilavorato-card mb-2 "
             data-offcanvas
             data-id="offcanvasDettagli"
             data-title="Dettagli Semilavorato"
             data-url="/Magazzino/SemiLavorati/Dettagli?id=@item.Id"
             style="cursor:pointer;">
            <div class="card-body">
                <div class="fw-bold fs-5 mb-2 text-primary">
                    @item.Barcode
                </div>
                <hr class="my-2"/>
                <div class="d-flex justify-content-between align-items-start">
                    <div class="flex-grow-1 pe-3">
                        <div class="small text-muted mb-1">
                            <strong>Ubicazione:</strong>
                            <span class="badge @(item.Uscito ? "bg-info text-dark" : "bg-secondary")">
                                @(item.Uscito ? "Uscito" : item.CodiceUbicazione)
                            </span>
                        </div>
                        <div class="small text-muted mb-1">
                            <strong>Descrizione:</strong> @item.Descrizione
                        </div>
                        <div class="small text-muted">
                            <strong>Ultima mod.:</strong>
                            @item.UltimaModifica.ToString("dd/MM/yyyy")
                        </div>
                    </div>
                    <div class="d-flex gap-3 align-items-center text-black">
                        <button type="button"
                                class="btn btn-md btn-outline-danger @(isBloccato ? "disabled" : "")"
                                data-delete
                                data-id="@item.Id"
                                data-label="@item.Barcode"
                                title="Elimina"
                                style="@(isBloccato ? "cursor: not-allowed; pointer-events: auto !important;" : "")"
                                @(isBloccato ? "disabled" : "")>
                            <i class="@(isBloccato ? "fa-solid fa-lock" : "fa-solid fa-trash")"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    }
    @if (!Model.SemiLavorati.Any())
    {
        <div class="text-center py-5 text-muted">
            <i class="fas fa-box-open fa-3x mb-3"></i>
            <p>Nessun semilavorato trovato.</p>
        </div>
    }
</div>

<div class="card shadow-sm mt-3 d-none d-md-block">
    <div class="card-body p-1">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead>
                <tr>
                    <th class="ps-4">Barcode</th>
                    <th>Descrizione</th>
                    <th>Ubicazione</th>
                    <th>Ultima Modifica</th>
                    <th>Azioni</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var item in Model.SemiLavorati)
                {
                    <tr style="cursor:pointer"
                        data-offcanvas
                        data-id="offcanvasDettagli"
                        title="Dettagli Semilavorato"
                        data-title="Dettagli Semilavorato"
                        data-url="/Magazzino/SemiLavorati/Dettagli?id=@item.Id">
                        <td class="ps-4 fw-bold text-primary">
                            <div>@item.Barcode</div>
                        </td>
                        <td>@item.Descrizione</td>
                        <td>
                                <span class="badge @(item.Uscito ? "bg-info text-dark" : "bg-secondary")">
                                    @(item.Uscito ? "Uscito" : item.CodiceUbicazione)
                                </span>
                        </td>

                        <td>@item.UltimaModifica.ToString("dd/MM/yyyy")</td>
                        <td>
                            <button
                                type="button"
                                class="btn btn-sm btn-outline-danger @(isBloccato ? "disabled" : "")"
                                data-delete
                                data-id="@item.Id"
                                data-label="@item.Barcode"
                                title="Elimina"
                                style="@(isBloccato ? "cursor: not-allowed; pointer-events: auto !important;" : "")"
                                @(isBloccato ? "disabled" : "")>
                                <i class="@(isBloccato ? "fa-solid fa-lock me-1" : "fa-solid fa-trash")"></i>
                                Elimina 
                            </button>
                        </td>

                    </tr>
                }

                @if (!Model.SemiLavorati.Any())
                {
                    <tr>
                        <td colspan="6" class="text-center py-5 text-muted">
                            <i class="fas fa-box-open fa-3x mb-3"></i>
                            <p>Nessun semilavorato trovato.</p>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>
@if (!isBloccato)
{
    <button type="button"
            class="fab d-md-none border-0"
            data-offcanvas
            data-id="offcanvasAggiungi"
            data-title="Aggiungi Semilavorato"
            data-url="/Magazzino/SemiLavorati/AggiungiSemilavorato">
        <i class="fa-solid fa-plus"></i>
    </button>
}
else
{
    <button class="fab d-md-none btn btn-primary disabled" title="Aggiunta bloccata"
            style="cursor: not-allowed; pointer-events: auto !important;">
        <i class="fa-solid fa-lock"></i>
    </button>
}


