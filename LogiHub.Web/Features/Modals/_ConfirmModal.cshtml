@model LogiHub.Web.Features.Modals.ConfirmModalViewModel

<div class="modal fade"
     id="@Model.ModalId"
     data-confirm-modal
     tabindex="-1"
     aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header border-0 pb-0">
                <h5 class="modal-title fw-bold">
                    @if(!string.IsNullOrEmpty(Model.IconClass))
                    {
                        <i class="@Model.IconClass me-2"></i>
                    }
                    @Model.Title
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body py-4">
                <p class="mb-0" data-confirm-message>
                    @Model.Message <strong data-dynamic-label></strong>
                </p>
            </div>
            <div class="modal-footer border-0 pt-0">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annulla</button>
                <button type="button" class="btn @Model.ConfirmButtonClass px-4" data-confirm-btn>
                    @Model.ConfirmButtonText
                </button>
            </div>
        </div>
    </div>
</div>