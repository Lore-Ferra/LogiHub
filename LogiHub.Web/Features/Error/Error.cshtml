@{ ViewData["Title"] = "Anomalia di Sistema"; }

<div class="container-md mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6 text-center">
            <div class="card border-0 shadow-sm p-0 p-lg-4 border-top border-5 border-warning">
                <div class="card-body">
                    <div class="mb-4 text-warning opacity-50">
                        <i class="fa-solid fa-gears fa-5x"></i> 
                    </div>

                    <h1 class="fw-bold text-primary">Operazione Interrotta</h1>
                    
                    <p class="lead mb-4">
                        Abbiamo riscontrato un piccolo "intoppo" nel magazzino digitale. L'operazione non è stata completata.
                    </p>

                    <div class="alert alert-info border-0 small mb-4 text-start d-flex align-items-center">
                        <i class="fa-solid fa-circle-info fa-lg me-3"></i>
                        <span>
                            Niente paura: i tuoi dati sono al sicuro. Prova a ricaricare la pagina tra un istante.
                        </span>
                    </div>

                    <div class="d-grid gap-2 d-sm-block">
                        <a href="@Url.Action(MVC.Magazzino.SemiLavorati.Index())" class="btn btn-primary px-5 py-2 fw-bold">
                            <i class="fa-solid fa-arrow-left me-2"></i>Torna al Magazzino
                        </a>
                    </div>

                    <div class="mt-4 pt-3 border-top">
                        <p class="text-muted mb-0" style="font-size: 0.7rem; opacity: 0.4;">
                            Status: 500
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>