@{ ViewData["Title"] = "Ubicazione non trovata"; }

<div class="container-md mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6 text-center">
            <div class="card border-0 shadow-sm p-0 p-lg-4 border-top border-5 border-primary">
                <div class="card-body">
                    <div class="mb-4 text-primary opacity-50">
                        <i class="fa-solid fa-box-open fa-5x"></i>
                    </div>

                    <h1 class="fw-bold text-primary">Ubicazione Sconosciuta</h1>
                    
                    <p class="lead mb-4">
                        Il percorso richiesto non risulta mappato nel sistema logistico di LogiHub.
                    </p>

                    <div class="alert alert-info border-0 small mb-4 text-start d-flex align-items-center">
                        <i class="fa-solid fa-circle-info fa-lg me-3"></i>
                        <span>
                            La pagina potrebbe essere stata spostata o l'indirizzo inserito non è corretto.
                        </span>
                    </div>

                    <div class="d-grid gap-2 d-sm-block">
                        <a href="@Url.Action(MVC.Magazzino.SemiLavorati.Index())" class="btn btn-primary px-5 py-2 fw-bold">
                            <i class="fa-solid fa-arrow-left me-2"></i>Torna al Magazzino
                        </a>
                    </div>

                    <div class="mt-4 pt-3 border-top">
                        <p class="text-muted mb-0" style="font-size: 0.7rem; opacity: 0.4;">
                            REF: 404
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>