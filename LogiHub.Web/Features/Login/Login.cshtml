@model LogiHub.Web1.Features.Login.LoginViewModel
@{
    Layout = "_LayoutLogin";
    ViewData["Title"] = "Login";
}

@section styles {
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
}

@* <div class="login-bg"></div> *@

<div class="login-container d-flex align-items-center justify-content-center w-100">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-11 col-sm-8 col-md-5 col-lg-4">

                <div class="login-card p-4 text-center">
                    <h2 class="mb-4">Accedi a Logihub</h2>

                    <form method="post" autocomplete="off">
                        <input asp-for="ReturnUrl" type="hidden" />

                        <div class="form-floating mb-3">
                            <input asp-for="Email"
                                   class="form-control"
                                   placeholder="email"
                                   value="email1@test.it"
                                   />
                            <label asp-for="Email">Indirizzo email</label>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Password"
                                   class="form-control"
                                   type="password"
                                   placeholder="password" 
                                   value="Prova" />
                            <label asp-for="Password">Password</label>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-start mb-3">
                            <div class="form-check form-switch">
                                <input asp-for="RememberMe"
                                       class="form-check-input"
                                       role="switch" />
                                <label asp-for="RememberMe"
                                       class="form-check-label">
                                    Rimani connesso
                                </label>
                            </div>
                        </div>

                        <button class="btn btn-dark w-100 mt-3">
                            ACCEDI
                        </button>
                    </form>

                    <div class="login-register mt-3">
                        NON HAI UN ACCOUNT?
                        <a href="javascript:void(0)">REGISTRATI</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
