@inject IHtmlLocalizer<SharedResource> SharedLocalizer
@inject Microsoft.Extensions.Options.IOptions<AppSettings> appSettings
@using LogiHub.Web.Features.Breadcrumb


@{
    var currentArea = ViewContext.RouteData.Values["area"]?.ToString();
}
@{
    Layout = "_LayoutHtml";
    var version = System.Reflection.Assembly.GetAssembly(typeof(Startup)).GetName().Version;

    var identitaCorrente = (LogiHub.Web.Areas.IdentitaViewModel)ViewData[LogiHub.Web.Areas.IdentitaViewModel.VIEWDATA_IDENTITACORRENTE_KEY];

    var paging = Model as PagingViewModel;
    var breadcrumbs = ViewData["Breadcrumbs"] as List<BreadcrumbItem>;
}

@section metas{
    @RenderSection("metas", false)
}

@section styles{
    @RenderSection("styles", false)
}

<div id="pageId" class="bg-light">
    <div class="onit-page-sticky-top" id="onit-page-sticky-top">
        <nav class="navbar navbar-expand-md bg-dark" data-bs-theme="dark">
            <div class="container-fluid">
                <a class="h1 text-light text-decoration-none" href="#">LogiHub</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">

                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link @(currentArea == "Magazzino" ? "active" : "")"
                               asp-area="Magazzino" asp-controller="SemiLavorati" asp-action="Index">
                                Magazzino
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(currentArea == "Inventari" ? "active" : "")"
                               asp-area="Inventari" asp-controller="Sessioni" asp-action="Index">
                                Inventari
                            </a>
                        </li>
                    </ul>

                    <ul class="navbar-nav">
                        @if (identitaCorrente != null)
                        {
                            <li class="nav-item dropdown">
                                <a href="#" class="nav-link dropdown-toggle  d-flex align-items-center" type="button"
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                    <img class="rounded-circle profile-pic" style="width: 50px"
                                         src="@identitaCorrente.GravatarUrl"/>&nbsp;@identitaCorrente.EmailUtenteCorrente
                                </a>
                                <div class="dropdown-menu dropdown-menu-end" role="menu">
                                    <a class="dropdown-item" href="javascript:void(0)"
                                       onclick="javascript: document.getElementById('POST_LogOut').submit()"
                                       title="@SharedLocalizer["Chiudi sessione di lavoro"]">
                                        <i class="fa-solid fa-right-from-bracket"></i>&nbsp;@SharedLocalizer["Esci"]
                                    </a>
                                    <form autocomplete="off" method="post" action="@Url.Action(MVC.Login.Logout())"
                                          id="POST_LogOut" display="none"></form>
                                </div>
                            </li>
                        }
                    </ul>

                </div>
            </div>
        </nav>
        @RenderSection("pageTitle", false)
    </div>
    @* --- INIZIO BREADCRUMB --- *@
    @if (breadcrumbs != null && breadcrumbs.Any())
    {
        <div class="container-xl px-3 py-2">
            <partial name="~/Features/Breadcrumb/_Breadcrumb.cshtml" model="breadcrumbs"/>
        </div>
    }
    @* --- FINE BREADCRUMB --- *@
    @RenderSection("pageSubtitle", false)
    <div class="container-xl p-2 p-md-3">
        @RenderBody()
        @{
            int maxPagesToShow = 5;
            int startPage = 1;
            int endPage = 1;

            if (paging != null)
            {
                startPage = Math.Max(1, paging.Page - 2);
                endPage = Math.Min(paging.TotalPages(), paging.Page + 2);

                if (endPage - startPage < maxPagesToShow - 1)
                {
                    if (startPage == 1)
                        endPage = Math.Min(paging.TotalPages(), startPage + maxPagesToShow - 1);
                    else if (endPage == paging.TotalPages())
                        startPage = Math.Max(1, endPage - maxPagesToShow + 1);
                }
            }
        }

        @if (paging != null)
        {
            <div class="d-flex d-md-none align-items-center gap-2 ps-2 mt-3">
                <span class="small text-muted text-nowrap">Mostra:</span>
                <select class="form-select form-select-sm w-auto"
                        onchange="location.href=this.value">
                    @foreach (var size in paging.PageSizes)
                    {
                        <option value="@paging.ChangePageSizePageUrl(Url, size)" selected="@(paging.PageSize == size)">
                            @size
                        </option>
                    }
                </select>
            </div>

            <div class="d-flex d-md-none justify-content-center py-3">
                <nav aria-label="Navigazione pagine">
                    <ul class="pagination mb-0">
                        <li class="page-item @(paging.Page <= 1 ? "disabled" : "")">
                            <a class="page-link" href="@paging.PrevPageUrl(Url)">‹</a>
                        </li>

                        @for (int i = startPage; i <= endPage; i++)
                        {
                            if (i == paging.Page)
                            {
                                <li class="page-item active"><span class="page-link">@i</span></li>
                            }
                            else
                            {
                                <li class="page-item">
                                    <a class="page-link" href="@paging.ChangePageUrl(Url, i)">@i</a>
                                </li>
                            }
                        }

                        <li class="page-item @(paging.Page >= paging.TotalPages() ? "disabled" : "")">
                            <a class="page-link" href="@paging.NextPageUrl(Url)">›</a>
                        </li>
                    </ul>
                </nav>
            </div>

            <div class="d-none d-md-flex justify-content-between align-items-center gap-3 pt-3 pb-4">

                <div class="d-flex align-items-center gap-2">
                    <span class="small text-muted text-nowrap">Mostra:</span>
                    <select class="form-select form-select-sm"
                            onchange="location.href=this.value">
                        @foreach (var size in paging.PageSizes)
                        {
                            <option value="@paging.ChangePageSizePageUrl(Url, size)"
                                    selected="@(paging.PageSize == size)">
                                @size
                            </option>
                        }
                    </select>
                </div>

                <nav aria-label="Navigazione pagine">
                    <ul class="pagination mb-0 justify-content-center">

                        <li class="page-item @(paging.Page <= 1 ? "disabled" : "")">
                            <a class="page-link" href="@paging.PrevPageUrl(Url)">‹</a>
                        </li>

                        @for (int i = startPage; i <= endPage; i++)
                        {
                            if (i == paging.Page)
                            {
                                <li class="page-item active"><span class="page-link">@i</span></li>
                            }
                            else
                            {
                                <li class="page-item">
                                    <a class="page-link" href="@paging.ChangePageUrl(Url, i)">@i</a>
                                </li>
                            }
                        }

                        <li class="page-item @(paging.Page >= paging.TotalPages() ? "disabled" : "")">
                            <a class="page-link" href="@paging.NextPageUrl(Url)">›</a>
                        </li>

                    </ul>
                </nav>

                <div style="width:100px" class="d-none d-md-block"></div>
            </div>
        }

    </div>

</div>

