@section scripts{
    <script type="text/javascript">
        // Intercetta la ricerca per sostituire la history invece di aggiungerla (Globale)
        document.addEventListener('submit', function (e) {
            const form = e.target;
            if (form.tagName === 'FORM' && form.method.toLowerCase() === 'get') {
                e.preventDefault();
                const formData = new FormData(form);
                const params = new URLSearchParams(formData);

                let action = form.getAttribute('action') || window.location.pathname;
                const newUrl = new URL(action, window.location.origin);
                newUrl.search = params.toString();

                window.location.replace(newUrl.toString());
            }
        });

        function notify(message, type = 'success') {
            const container = document.getElementById('mainToastContainer');
            if (!container) return;

            const toastId = 'toast-' + Date.now();
            // Mappiamo 'error' su 'danger' per Bootstrap
            const bgClass = (type === 'error' || type === 'danger') ? 'bg-danger' : `bg-${type}`;
            const icon = (type === 'success') ? 'fa-circle-check' : 'fa-circle-exclamation';

            const isDarkText = (type === 'warning' || type === 'info');
            const textClass = isDarkText ? 'text-dark' : 'text-white';
            const btnCloseClass = isDarkText ? '' : 'btn-close-white';

            const html = `
                <div id="${toastId}" class="toast align-items-center ${textClass} ${bgClass} border-0 shadow-lg mt-2" role="alert" aria-live="assertive" aria-atomic="true">
                    <div class="d-flex">
                        <div class="toast-body">
                            <i class="fa-solid ${icon} me-2"></i>
                            ${message}
                        </div>
                        <button type="button" class="btn-close ${btnCloseClass} me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                    </div>
                </div>`;

            container.insertAdjacentHTML('afterbegin', html);
            const toastEl = document.getElementById(toastId);
            const bsToast = new bootstrap.Toast(toastEl, {delay: 3000});
            bsToast.show();

            toastEl.addEventListener('hidden.bs.toast', () => toastEl.remove());
        }

        @if (ViewData["AlertsModel"] is LogiHub.Web.Infrastructure.AlertsDto alerts && alerts.HasAlerts)
        {
            foreach (var a in alerts.List)
            {
                var level = a.Level.ToString().ToLower();
                <text>notify('@Html.Raw(a.Value.Replace("'", "\\'"))', '@level');</text>
            }
        }
    </script>
    @RenderSection("scripts", false)
}